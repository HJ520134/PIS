          //start   all download


          $('#js_btn_download_flall').on('click', function () {

              var url = '@Html.Raw(Url.Action("DownloadHCPlanExcelAll", "GoldenLine", new { id = ViewBag.LineID, clintName = "js_btn_download_fl" }))';
              this.form.action = url;
