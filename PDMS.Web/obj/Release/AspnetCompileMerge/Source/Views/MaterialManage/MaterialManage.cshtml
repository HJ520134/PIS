@section ViewScripts {
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap-select.css" />
    <script type="text/javascript" src="~/Scripts/EQP/bootstrap-select.js"></script>
    <script type="text/javascript">
        $(function () {
            var MaterialManageUrl = (function () {
                var urls = {
                    //画面初始化加载
                    queryMaterialApply: '@Url.Action("QueryMaterialApply", "MaterialManage")',
                    //根据料号取得相关信息
                    queryMatinfo: '@Url.Action("QueryMatinfo", "MaterialManage")',
                    //取得某一申请单的信息
                    queryMaterialApplyByUid: '@Url.Action("QueryMaterialApplyByUid", "MaterialManage")',
                    //根据领用人取得部门
                    queryDepartByUser: '@Url.Action("QueryDepartByUser", "MaterialManage")',
                    //导出excel
                    doExportFunction: '@Url.Action("DoExportFunction", "MaterialManage")'
                };
                //#region 定义字段列
                var columns = [
                    {
                        createdCell: function (td, cellData, rowData, row, col) {
                            $(td).html('<input type="checkbox" name="cktrans" class="js-checkbox-item" value="' + rowData.Material_Apply_Uid + '">')
                            .addClass('table-col-checkbox');
                        },
                        className: "text-center"
                    }, {
                        data: null,
                        className: "table-col-seq"
                    }, {
                        createdCell: function (td, cellData, rowData, row, col) {
                            var buttonEdit = '<button type="button" class="btn btn-primary btn-xs js-grid-edit" data-id="' + rowData.Material_Apply_Uid + '">编辑</button>';

                            $(td).html(buttonEdit);
                        },
                        className: "text-center"
                    },{
                        data: "Apply_Type",
                        className: "min-col-xs"
                    }, {
                        data: "Status",
                        className: "min-col-xs"
                    }, {
                        data: "Material_Id",
                        className: "min-col-xs"
                    }, {
                        data: "Material_Name",
                        className: "min-col-xs"
                    } , {
                        data: "Material_Types",
                        className: "min-col-xs"
                    }, {
                        data: "Classification",
                        className: "min-col-xs"
                    }, {
                        data: "Apply_Number",
                        className: "min-col-lg"
                    }, {
                        data: "Actual_Number",
                        className: "min-col-lg"
                    }, {
                        data: "Applyer",
                        className: "min-col-xs"
                    }, {
                        data: "Apply_Date",
                        className: "min-col-xs"
                    }];
                //#endregion 定义字段列

                //#endregion

                var _getParams = function () {
                    return $('#js_form_query').serialize().replace(/\+/g, " ");
                };

                var _queryMaterialApply = function (firstLoad, buildCriteria) {

                    var config = {
                        pageId: "#page",
                        tableId: "#js_Bom_datatable",
                        remoteUrl: urls.queryMaterialApply,
                        searchParams: _getParams(),
                        tableOptions: {
                            scrollX: true,
                            autoWidth: true,
                            columns: columns
                        }

                    };
                    if (!firstLoad) {
                        $('#page').page('destroy');
                    }
                    if (buildCriteria) {
                        PDMS.Utility.Criteria.Build();
                    }
                    PDMS.Utility.Pages.Set(config);
                };
                return {
                    urls: urls,
                    Init: function () {
                        PDMS.Utility.Criteria.Init();
                        _queryMaterialApply(true, false);
                    },
                    queryMaterialApply: function (buildCriteria) {
                        if (!buildCriteria) {
                            buildCriteria = false;
                        }
                        _queryMaterialApply(false, buildCriteria);
                    }
                }
            })();

            MaterialManageUrl.Init();

            $('.needint').keydown(function (event) {
                var value = event.key;
                if (value.length > 1)
                    return true;
                if (!((/^(\+|-)?\d+$/.test(value) && value >= 0)))
                    return false;
            })

            $('#js_Bom_datatable').on('change', 'tbody', function () {
                $('#js_Bom_datatable tbody ').addClass('text-center')
            })


            $('#s_input_need_date,#s_input_need_date2').datetimepicker({
                format: 'yyyy-mm-dd hh:ii'
            })

            //清空按钮
            $('#js_btn_clear').click(function () {
                PDMS.Utility.Criteria.Clear();
                $('#js_search_modal').find('input').val('');
            });

            //查询按钮
            $('#js_btn_query').click(function () {
                if ($('#js_form_query').valid()) {
                    MaterialManageUrl.queryMaterialApply(true);
                    $('#js_search_modal').modal('hide');
                }
            });

            //导出按钮
            $('#js_bt_export').click(function () {
                var materialid = $('#js_search_modal').find('input[name=Material_Id]').val();
                var materialname = $('#js_search_modal').find('input[name=Material_Name]').val();
                var materialtypes = $('#js_search_modal').find('input[name=Material_Types]').val();
                var classification = $('#js_search_modal').find('input[name=Classification]').val();
                var url = MaterialManageUrl.urls.doExportFunction;
                url += "?materialid=" + materialid + "&materialname=" + materialname + "&materialtypes=" + materialtypes;
                url += "&classification=" + classification;
                window.location.href = url;
            });

            //领料申请根据料号带出品名和型号
            $('#js_edit_select_material_id').change(function () {
                var matid = $('#js_edit_select_material_id option:selected').val();
                var url = MaterialManageUrl.urls.queryMatinfo;
                $.post(url, { Material_Uid: matid }, function (data) {
                    if (data.length > 0) {
                        $('#js_edit_modal').find('input[name=Material_Name]').val(data[0].Material_Name);
                        $('#js_edit_modal').find('input[name=Material_Types]').val(data[0].Material_Types);
                    } else {
                        $('#js_edit_modal').find('input[name=Material_Name]').val("");
                        $('#js_edit_modal').find('input[name=Material_Types]').val("");
                    }
                });
            })

            //退料申请根据料号带出品名和型号
            $('#js_edit_select_material_id2').change(function () {
                var matid = $('#js_edit_select_material_id2 option:selected').val();
                var url = MaterialManageUrl.urls.queryMatinfo;
                $.post(url, { Material_Uid: matid }, function (data) {
                    if (data.length > 0) {
                        $('#js_edit_modal2').find('input[name=Material_Name]').val(data[0].Material_Name);
                        $('#js_edit_modal2').find('input[name=Material_Types]').val(data[0].Material_Types);
                    } else {
                        $('#js_edit_modal2').find('input[name=Material_Name]').val("");
                        $('#js_edit_modal2').find('input[name=Material_Types]').val("");
                    }
                });
            })

            //领料原因变更
            $('#js_edit_select_apply_reason').change(function () {
                if ($(this).val() == "其它") {
                    $('#div_s_input_reason_detail').show();
                }
                else {
                    $('#div_s_input_reason_detail').hide();
                }
            })

            //领用人变更
            $('#js_edit_select_acceprter').change(function () {
                var Userid = $(this).val();
                var url = MaterialManageUrl.urls.queryDepartByUser;
                $.post(url, { Userid: Userid }, function (data) {
                    if (data.length > 0) {
                        $('#js_edit_modal').find('input[name=Department]').val(data[0].toString());
                    }
                    else {
                        $('#js_edit_modal').find('input[name=Department]').val('');
                    }
                })
            })


