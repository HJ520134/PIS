@section ViewScripts{
    <script type="text/javascript">
    $('#btn_import_fl').on('click', function () {
        $('#js_importExcel_modal').modal('show');
    });


    $('#js_btn_clear').click(function () {
        $('#js_select_plant_search').val(0);
        $('#js_select_op_types_search').val(0);
        $('#js_select_funplant_search').val(0);
        PDMS.Utility.Criteria.Clear();
    });

    $('#btn_import_fl').on('click', function () {
        $('#js_importExcel_modal').modal('show');
    });

    $('#btn_clear_Update').on('click', function () {
        $('#js_importExcel_modal').modal('hide');
    });

    //#endregion
    $(function () {
        var RepairLocationUrl = (function () {
            var urls = {
                //画面初始化加载
                queryRepairLocation: '@Url.Action("QueryRepairLocation", "Fixture")',
                getOrgByParant: '@Url.Action("GetOrgByParant", "Fixture")',
                queryRepairLocationByUid: '@Url.Action("QueryRepairLocationByUid", "Fixture")',
                deleteRepairLocation: '@Url.Action("DeleteRepairLocation", "Fixture")',
                //导出excel
                doExportFunction: '@Url.Action("DoRLExportFunction", "Fixture")',

                doAllExportFunction: '@Url.Action("DoAllRLExportFunction", "Fixture")',

            };

            //#region 定义字段列
            var columns = [
                {
                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).html('<input type="checkbox" name="cktrans" class="js-checkbox-item" value="' + rowData.Repair_Location_UID + '">')
                        .addClass('table-col-checkbox');
                    },
                    className: "text-center"
                },{
                    createdCell: function (td, cellData, rowData, row, col) {
                        var buttonEdit = '<button type="button" class="btn btn-primary btn-xs js-grid-edit" data-id="' + rowData.Repair_Location_UID + '">编辑</button>';
                        var result = '<button class="btn btn-primary btn-xs" rel="action-popover">' +
                                    '<i class="fa fa-reorder"></i>' +
                                    '</button>' +
                                    '<div class="hidden popover-content">' +
                                        '{0}' +
                                        '<button type="button" class="btn btn-primary btn-xs js-grid-delete" data-id="' + rowData.Repair_Location_UID + '">删除</button>' +
                                    '</div>';
                        result = result.replace('{0}', buttonEdit);
                        $(td).html(result);
                    },
                    className: "text-center"
                },
                {
                    data: null,
                    className: "table-col-seq"
                },
                 {
                     data: "Plant",
                       className: "min-col-xs"
                 },
                 {
                     data: "BG",
                      className: "min-col-xs"
                 },
                {
                    data: "FunPlant",
                    className: "min-col-xs"
                },
                {
                    data: "Repair_Location_ID",
                    className: "min-col-xs"
                },
                {
                    data: "Repair_Location_Name",
                    className: "min-col-xs"
                },
                {
                    data: "Repair_Location_Desc",
                    className: "min-col-xs"
                },
                {
                    data: "Is_Enable",
                    render: function (data, type, full, meta) {
                        return data ? "启用" : "禁用";
                    },
                    className: "min-col-sm"
                },
                {
                    data: "Creator",
                    className: "min-col-xs"
                }, {
                    data: "Created_Date",
                    className: "min-col-xs"
                }, {
                    data: "Modifier",
                    className: "min-col-xs"
                }, {
                    data: "Modified_Date",
                    className: "min-col-xs"
                }];
            //#endregion 定义字段列

            var _getParams = function () {
                
                PDMS.Utility.Settings.Pages.remote.params = $('#js_form_query').serialize().replace(/\+/g, " ");

                return $('#js_form_query').serialize().replace(/\+/g, " ");

            };

            var _queryRepairLocation = function (firstLoad, buildCriteria) {

                var config = {
                    pageId: "#page",
                    tableId: "#js_Bom_datatable",
                    remoteUrl: urls.queryRepairLocation,
                    searchParams: _getParams(),
                    tableOptions: {
                        scrollX: true,
                        autoWidth: true,
                        columns: columns
                    }

                };
                if (!firstLoad) {
                    $('#page').page('destroy');
                }
                if (buildCriteria) {
                    PDMS.Utility.Criteria.Build();
                }
                PDMS.Utility.Pages.Set(config);
            };
            return {
                urls: urls,
                Init: function () {
                    PDMS.Utility.Criteria.Init();
                    _queryRepairLocation(true, false);
                },
                queryRepairLocation: function (buildCriteria) {
                    if (!buildCriteria) {
                        buildCriteria = false;
                    }
                    _queryRepairLocation(false, buildCriteria);
                }
            }
        })();

        RepairLocationUrl.Init();

        //隐藏查询框时清空值
        $('#js_search_modal').on('hidden.bs.modal', function (e) {
            $('#js_search_modal').find('input').val('');
        });

        //隐藏上传窗口时清空值-----------START
        $('#js_importExcel_modal').on('hidden.bs.modal', function (e) {
            $('#js_importExcel_modal').find('input').val('');
        });
        //隐藏上传窗口时清空值-------------END

        //根据厂区设定OP,并设定初始值---------START
        function SetOpByPlant(Plant_Organization_UID, BG_Organization_UID) {
            $('#js_select_op_types_search').html('<option value=0></option>');
            url = RepairLocationUrl.urls.getOrgByParant;
            if (Plant_Organization_UID != 0) {
                $.post(url, { Parant_UID: Plant_Organization_UID,type:1 }, function (data) {
                    for (var i = 0; i < data.length; i++) {
                        $('#js_select_op_types_search').append('<option value="' + data[i].Organization_UID + '">' + data[i].Organization_Name + '</option>');
                    }
                    $('#js_select_op_types_search').val(BG_Organization_UID);
                });
