@section ViewScripts{
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap-select.css" />
    <script type="text/javascript" src="~/Scripts/EQP/bootstrap-select.js"></script>
    <script type="text/javascript">
        $('#btn_import_fl').on('click', function () {
            $('#js_importExcel_modal').modal('show');
        });
        $('#btn_clear_Update').on('click', function () {
            $('#js_importExcel_modal').modal('hide');
        });
        $(function () {
            var DefectRepairMaintenance = (function () {
                var needBuildCriteria = false;
                var urls =
                    {
                        EditDefectRepair: '@Url.Action("EditDefectRepair", "Fixture")',
                        AddDefectRepair: '@Url.Action("AddDefectRepair", "Fixture")',
                        queryDefectRepairs: '@Url.Action("QueryDefectRepairs", "Fixture")',
                        queryDefectRepair: '@Url.Action("QueryDefectRepair", "Fixture")',
                        deleteDefectRepair: '@Url.Action("DeleteDefectRepair", "Fixture")',
                        exportDefectRepairs: '@Url.Action("DoExportDefectRepair", "Fixture")',
                        exportDefectRepairsByQuery: '@Url.Action("DoExportDefectRepairByQuery", "Fixture")',
                        //根据厂区取得OP类型
                        getCurrentOPType: '@Url.Action("GetCurrentOPType", "Fixture")',
                        //根据OP类型取得功能厂
                        getFunPlantByOPTypes: '@Url.Action("GetFunPlantByOPTypes", "Fixture")',
                        GetRepairSolutionList: '@Url.Action("GetRepairSoulutionList", "Fixture")',
                        GetDefectListUrl: '@Url.Action("GetDefectList", "Fixture")',
                        downloadExcel: '@Url.Action("FixtureDefect_RepairRelation", "Fixture")'
                    };
                var columns = [{
                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).html('<input type="checkbox" name="cktrans" class="js-checkbox-item" value="' + rowData.Defect_RepairSolution_UID + '">')
                             .addClass('table-col-checkbox');
                    },
                    className: "text-center"
                },
                      {
                          createdCell: function (td, cellData, rowData, row, col) {
                              var hiddenHtml = '<input type="hidden" name="Plant_Organization_UID" value=' + rowData.Plant_Organization_UID + '>'
                                  + '<input type="hidden" name="BG_Organization_UID" value="' + rowData.BG_Organization_UID + '">'
                                  + '<input type="hidden" name="FunPlant_Organization_UID" value="' + rowData.FunPlant_Organization_UID + '">';

                              var buttonHtml = '<button class="btn btn-primary btn-xs" rel="action-popover">' +
                                              '<i class="fa fa-reorder"></i>' +
                                          '</button>' +
                                          '<div class="hidden popover-content">' +
                                              '<button type="button" class="btn btn-primary btn-xs js-grid-edit" data-id="' + rowData.Defect_RepairSolution_UID + '">编辑</button>' +
                                              '<button type="button" class="btn btn-primary btn-xs js-grid-delete" data-id="' + rowData.Defect_RepairSolution_UID + '" data-DefectName="' + rowData.Fixture_DefectName + '" data-RepairSolutionName="' + rowData.Repair_SoulutionName + '">删除</button>' +
                                          '</div>';
                              var resultHtml = hiddenHtml + buttonHtml;
                              $(td).html(resultHtml);
                          },
                          className: "text-center"
                      },
                    {
                        data: null,
                        className: "table-col-seq"
                    }, {
                        data: "PlantName",
                        className: "min-col-xs"
                    }, {
                        data: "BGName",
                        className: "min-col-xs"
                    }, {
                        data: "FunPlantName",
                        className: "min-col-xs"
                    }, {
                        data: "Fixture_DefectName",
                        className: "min-col-xs"
                    }, {
                        data: "Repair_SoulutionName",
                        className: "min-col-xs"
                    },
                   {
                       data: "Is_Enable",
                       render: function (data, type, full, meta) {
                           return data ? "启用" : "禁用";
                       },
                       className: "min-col-xs"
                   }
                , {
                    data: "ModifiedUser.User_Name",
                    className: "min-col-lg"
                }, {
                    data: "Modified_Date",
                    className: "min-col-lg"
                }
                ];

                var _getParams = function () {
                    if (needBuildCriteria) {
                        PDMS.Utility.Settings.Pages.remote.params = $('#js_form_query').serialize().replace(/\+/g, " ");
                        return $('#js_form_query').serialize().replace(/\+/g, " ");
                    }
                    else {
                        return null;
                    }
                };

                var _queryDefectRepairs = function (firstLoad) {

                    var config = {
                        pageId: "#page",
                        tableId: "#js_DefectRepair_datatable",
                        remoteUrl: urls.queryDefectRepairs,
                        searchParams: _getParams(),
                        tableOptions: {
                            scrollX: true,
                            scrollCollapse: false,
                            autoWidth: true,
                            columns: columns
                        }
                    };

                    if (!firstLoad) {
                        $('#page').page('destroy');
                    }

                    if (needBuildCriteria) {
                        PDMS.Utility.Criteria.Build();
                    }

                    PDMS.Utility.Pages.Set(config);
                };

                return {
                    urls: urls,
                    Init: function () {
                        //页面初始化加载查询时，初始化Criteria
                        PDMS.Utility.Criteria.Init();
                        _queryDefectRepairs(true);
                    },
                    queryDefectRepairs: function (isSearchBtn) {
                        needBuildCriteria = (isSearchBtn === true ? true : needBuildCriteria);
                        _queryDefectRepairs(false);
                    }
                }

            })();
            DefectRepairMaintenance.Init();

            $('#js_btn_query').click(function () {
                if ($("#js_form_query").valid()) {
                    DefectRepairMaintenance.queryDefectRepairs(true);
                    $('#js_search_modal').modal('hide');
                }
            });

            //#region 模板下载
            $('#js_btn_download_fl').on('click', function () {
                this.form.action = DefectRepairMaintenance.urls.downloadExcel;
                $('#js_form_excel_add').submit();
            });
            //提交     stat
            $('#btn_excel_upload').on('click', function () {
                $('#js_form_excel_upload').ajaxSubmit({
                    async: true,
                    beforeSubmit: function () {

                        var fileName = $('#js_s_input_import').val();
                        var fileExtension = fileName.substring(fileName.lastIndexOf('.') + 1);
                        if (fileExtension.toLowerCase() != "xlsx" && fileExtension.toLowerCase() != "xls") {
                            PDMS.Utility.MessageBox.info('请选择Excel文件');
                            $.unblockUI();
                            return false;
                        }
                        if (!$('#js_form_excel_upload').valid()) {
                            $.unblockUI();
                            return false;
                        }
                        $.blockUI({ message: "<h1>@T("QA.Imported")</h1>" });
                    },
                    success: function (data) {
                        $.unblockUI();
                        if (data != '') {
                            PDMS.Utility.MessageBox.error(data);
                        }
                        else {
                            $('#js_importExcel_modal').modal('hide');
                            PDMS.Utility.MessageBox.info('@T("QA.Importsuccessful")', function () {
                                window.location.reload();
                            });
                        }
                    }
                });
            });
            //提交   END
            //隐藏上传窗口时清空值-----------START
            $('#js_importExcel_modal').on('hidden.bs.modal', function (e) {
                $('#js_importExcel_modal').find('input').val('');
            });
            //隐藏上传窗口时清空值-------------END

            $('#js_btn_export').click(function () {
                var $selectList = $('#js_DefectRepair_datatable').find('.js-checkbox-item:checked');
                var len = $selectList.length;
                if (len == 0) {
                    //PDMS.Utility.MessageBox.info('请选择要导出的数据！');
                    //全部导出
                    var url = DefectRepairMaintenance.urls.exportDefectRepairsByQuery;
                    //没有查询条件的情况，从查询页面获取
                    if (PDMS.Utility.Settings.Pages.remote.params == null) {
                        PDMS.Utility.Settings.Pages.remote.params = $('#js_form_query').serialize().replace(/\+/g, " ");
                    }
                    url += '?' + PDMS.Utility.Settings.Pages.remote.params;
                    window.location.href = url;
                } else {
                    var uids = $.map($selectList, function (row) {
                        return row.value;
                    });
                    var url = DefectRepairMaintenance.urls.exportDefectRepairs;
                    url += "?uids=" + uids.toString();
                    window.location.href = url;
                }
            });

            //extra configuration of validate in add/edit model, others via data-attribute
            $('#js_form_DefectRepair_edit').validate({
                errorContainer: $('ul.validate-error'),
                errorLabelContainer: $('#js_edit_modal ul.validate-error'),
                wrapper: 'li'
            });

            //clear query conditions in search modal
            $('#js_btn_clear').click(function () {

                PDMS.Utility.Criteria.Clear(function () {
                    $('#js_s_radio_valid').prop('checked', true);
                    $("#js_s_input_reference_date").val(moment().format('YYYY-MM-DD'));
                });
            });

            //do clean up in edit modal show/hide
            $('#js_edit_modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget)
                var modal = $(this)
                var title = modal.find('.modal-title');

                if (button.hasClass('js-grid-edit')) {
                    //编辑
                    title.text("编辑治具异常及维修策略关系信息");
                    $('#js_btn_save_new_Defect_RepairSolution').hide();
                    $('#js_btn_save_edit_Defect_RepairSolution').show();
                    $('#js_input_begin_date').attr("disabled", true);
                    $("#js_hidden_edit_id").val(0);

                    var uid = button.attr("data-id");
                    //调api 获取车间信息，填充到编辑画面
                    $.get(DefectRepairMaintenance.urls.queryDefectRepair, { uid: uid }, function (data) {
                        $('#js_select_factory_add').val(data.Plant_Organization_UID);
                        $('#js_select_factory_add').trigger('change');

                        $('#js_select_optype_add').selectpicker('val', data.BG_Organization_UID);
                        $('#js_select_optype_add').trigger('change');

                        
                        $('#js_select_funplant_add').selectpicker('val', data.FunPlant_Organization_UID);
                        if (data.FunPlant_Organization_UID != null) {
                            $('#js_select_funplant_add').trigger('change');
                        }

                        $('#js_select_defect_add').selectpicker('val', data.Fixtrue_Defect_UID);
                        $('#js_select_Solution_add').selectpicker('val', data.Repair_Solution_UID);

                        $('#js_e_select_enable_flag').selectpicker('val',data.Is_Enable.toString());
                    });


                } else if (button.attr('id') == 'js_btn_add_DefectRepair') {
                    //新增
                    $("#js_select_factory_add").removeAttr("disabled");
                    $("#js_select_optype_add").removeAttr("disabled");
