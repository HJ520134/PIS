    });

    $('.needint').keydown(function (event) {
        var value = event.key;
        if (value.length > 1)
            return true;
        if (!((/^(\+|-)?\d+$/.test(value) && value >= 0)))
            return false;
    })

    $('#js_btn_clear').click(function () {
        $('#js_select_plant').val(0);
        $('#js_select_op_types').val(0);
        PDMS.Utility.Criteria.Clear();
    });

    $('#btn_clear_Update').on('click', function () {
