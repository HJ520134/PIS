            <label class="col-xs-2 col-md-2" id="currentDate">@T("Common.Date"):@ViewBag.currentDate</label>
            <label class="col-xs-2 col-md-3" id="currentTimeInterval">@T("QA.Timeperiod"): @ViewBag.currentTimeInterval</label>
            <label class="col-xs-2 col-md-3" id="MachineName">@T("OEE.MachineName"):@ViewBag.MachineName</label>
