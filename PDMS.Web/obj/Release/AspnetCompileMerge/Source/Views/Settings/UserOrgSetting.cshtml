@section ViewScripts{
    <script type="text/javascript">
        $(function () {

            var UserOrgSettingUrls = {
                QueryUserOrgs: '@Url.Action("QueryUserOrgs", "Settings")',
                QueryUserOrg: '@Url.Action("QueryUserOrg", "Settings")',
                DeleteUserOrg: '@Url.Action("DeleteUserOrg", "Settings")',
                DeleteSubOrg: '@Url.Action("DeleteSubOrg", "Settings")',
                AddUserOrg: '@Url.Action("AddUserOrg", "Settings")',
                DoExportUserOrg: '@Url.Action("DoExportUserOrg", "Settings")',
                getUserName: '@Url.Action("GetSystemUserByNTId", "Common")',
                modifyUserOrg: '@Url.Action("modifyUserOrg", "Settings")',
                GetOrgInfo: '@Url.Action("GetOrgInfoByOrg", "Settings")'
