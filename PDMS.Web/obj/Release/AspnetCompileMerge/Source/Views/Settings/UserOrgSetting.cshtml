                        }

                        //get userorg begindate
                        var userorgBegindate = userorgUid > 0 ? $row.find('.js-userorg-begindate').text() : $row.find('input[name=Begin_Date]').val();

                        //valid begindate
                        if (!moment(userorgBegindate).isValid()) {
                            PDMS.Utility.MessageBox.error(PDMS.Utility.Tools.FormatString("Begin Date can't be empty or is invalid at #{0}row", (rowIdx + 1)));
                            flag = false;
                            return false;
                        }

                        //get userorg enddate
                        var userorgEnddate = $endDateInput.val();

                        if (userorgEnddate === "") {
                            userorgEnddate = null;
                        } else {
                            if (moment(userorgBegindate).isAfter(userorgEnddate)) {
                                PDMS.Utility.MessageBox.error(PDMS.Utility.Tools.FormatString("Begin Date can't after End Date, Error at #{0} row", (rowIdx + 1)));
                                flag = false;
                                return false;
                            }
                        }

                        var dateValidate = PDMS.Utility.Tools.DateCompareInterval(
                                                { name: "Orgnization", beginDate: rowData.begindate, endDate: rowData.enddate === undefined ? null : rowData.enddate },
                                                { name: "User Orgnization", beginDate: userorgBegindate, endDate: userorgEnddate },
                                                PDMS.Utility.Tools.FormatString("Date not valid at #{0} row", (rowIdx + 1))
                                            );

                        if (!dateValidate) { flag = false; return false; }

                        userorg["System_UserOrgUID"] = userorgUid;
                        userorg["Organization_UID"] = orgUId;
                        userorg["Organization_ID"] = orgId;
                        userorg["UserOrg_Begin_Date"] = userorgBegindate;
                        userorg["UserOrg_End_Date"] = userorgEnddate;
                        //push item into sub
                        userOrgs.push(userorg);
                    });

                submitJson.UserOrgWithOrgs = userOrgs;

                return flag;
