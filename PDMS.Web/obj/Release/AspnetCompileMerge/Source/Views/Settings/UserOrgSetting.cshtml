            //#region UserOrgSetting
            var UserOrgSetting = (function () {

                var needBuildCriteria = false;
                var subDatatable = null;

                //#region columns
                var columns = [{

                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).html('<input type="checkbox" name="cktrans" class="js-checkbox-item" value="' + rowData.System_UserOrgUID + '">')
