                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).html('<button class="btn btn-primary btn-xs" rel="action-popover">' +
                                        '<i class="fa fa-reorder"></i>' +
                                    '</button>' +
                                    '<div class="hidden popover-content">' +
                                        '<button type="button" name="grid_edit" class="btn btn-primary btn-xs js-grid-edit" data-uuid="' + rowData.Account_UID + '">Edit</button>' +
                                    '</div>');
                    },
                    className: "text-center min-col-xs"
                }, {
                    data: null,
                    className: "table-col-seq min-col-xs"
                }, {
                    data: "User_NTID",
                    className: "min-col-md"
                }, {
                    data: "User_Name",
                    className: "min-col-md"
                }, {
                    data: "Organization_ID",
                    className: "min-col-xs"
                }, {
                    data: "Organization_Name",
                    className: "min-col-xs"
                }, {
                    data: "Begin_Date",
                    className: "min-col-lg"
                }, {
                    data: "End_Date",
                    className: "min-col-lg"
                }, {
                    data: "Modified_UserName",
                    className: "min-col-lg"
                }, {
                    data: "Modified_Date",
                    className: "min-col-lg"
                }];
                //#endregion

                //#region subColumns
                var subColumns = [{
                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).html('<input type="checkbox" name="cktrans" class="js-checkbox-item">')
                             .addClass('table-col-checkbox');
                    },
                    className: "text-center",
                    defaultContent: ' ',
                }, {
                    className: "table-col-seq",
                    render: function (data, type, rowData, meta) {
                        return ++meta.row;
                    }
                }, {
                    data: "Organization_ID",
                    className: "min-col-lg js-p-org-id",
                    render: function (data, type, rowData, meta) {

                        var isEdit = rowData.System_UserOrgUID > 0;
                        var html = isEdit ? ("Org Id:" + data + " / Org Name:" + rowData.Organization_Name) : '<select class="form-control input-sm js-subtable-org-id" name="Org" style="width:100%"></select>';
                        return html;
                    }
                }, {
                    data: "UserOrg_Begin_Date",
                    className: "min-col-lg js-userorg-begindate",
                    render: function (data, type, rowData, meta) {

                        var isEdit = rowData.System_UserOrgUID > 0;
                        var html;

                        if (isEdit) {
                            html = data;
                        } else {
                            html = '<div class="input-group">' +
                                        '<div class="input-group-addon"><i class="fa fa-calendar"></i></div>' +
                                        '<input type="text" name="Begin_Date" class="form-control input-sm date" value="" readonly="readonly">' +
                                    '</div>';
                        }
                        return html;
                    }
                }, {
                    data: "UserOrg_End_Date",
                    className: "min-col-lg",
                    render: function (data, type, rowData, meta) {
                        var isDisable, html;

                        isDisable = data !== null;

                        if (isDisable) {
                            html = data;

                        } else {

                            html = '<div class="input-group">' +
                                        '<div class="input-group-addon"><i class="fa fa-calendar"></i></div>' +
                                        '<input type="text" name="End_Date" class="form-control input-sm date" value="" readonly="readonly">' +
                                        '<span class="input-group-addon date-clear"><i class="fa fa-times"></i></span>' +
                                   '</div>';
                        }
                        return html;
                    }
                }];

                var subColumnsForView = [{
                    className: "table-col-seq",
                    render: function (data, type, rowData, meta) {
                        return ++meta.row;
                    }
                }, {
                    data: "Organization_ID"
                }, {
                    data: "Organization_Name"
                }, {
                    data: "UserOrg_Begin_Date"
                }, {
                    data: "UserOrg_End_Date"
                }];
                //#endregion subColumns

                var _getParams = function () {
                    if (needBuildCriteria) {
                        return $('#js_form_query').serialize().replace(/\+/g, " ");
                    } else {
                        return null;
                    }
                };

                var _queryUserOrgs = function (firstLoad) {

                    var config = {
                        pageId: "#page",
                        tableId: "#js_user_Org_datatable",
                        remoteUrl: UserOrgSettingUrls.QueryUserOrgs,
                        searchParams: _getParams(),

                        tableOptions: {
                            scrollX: true,
                            autoWidth: true,
                            columns: columns
                        }
                    };

                    if (!firstLoad) {
                        $('#page').page('destroy');
                    }

                    if (needBuildCriteria) {
                        PDMS.Utility.Criteria.Build();
                    }

                    PDMS.Utility.Pages.Set(config);
                };

                return {
                    Init: function () {
                        //页面初始化加载查询时，初始化Criteria
                        PDMS.Utility.Criteria.Init();
                        _queryUserOrgs(true);
                    },
                    QueryUserOrgs: function (isSearchBtn) {

                        needBuildCriteria = (isSearchBtn === true ? true : needBuildCriteria);
                        _queryUserOrgs(false);
                    },
                    GetSubDatatable: function () {

                        if (subDatatable == null) {

                            subDatatable = $('#js_Org_table').DataTable({
                                paging: false,
                                searching: false,
                                ordering: false,
                                retrieve: true,
                                columns: subColumns,
                            });

                        }
                        return subDatatable;
                    },
                    SetSubDatatable: function (datatable) {
                        subDatatable = datatable;
                    },
                    DestroySubTable: function () {
                        if (subDatatable != null) {
                            subDatatable.destroy();
                        }
                    },
                    SubColumns: subColumns,
                    SubColumnsForView: subColumnsForView,
                }
            })();
            //#endregion
            UserOrgSetting.Init();
            // #region Page elements events

            //查询按钮
            $('#js_btn_query').click(function () {
                if ($("#js_form_query").valid()) {
                    UserOrgSetting.QueryUserOrgs(true);
                    $('#js_search_modal').modal('hide');
                }
            });
            //[新增User拥有的Org]按钮
            $('#js_btn_add_Org').on('click', function () {

                var dataTable = UserOrgSetting.GetSubDatatable();
                var allowAdd = true;

                dataTable.rows().every(function (rowIdx, tableLoop, rowLoop) {

                    var $row = $(dataTable.row(rowIdx).node());

                    if ($row.data("orginfo").userorguid > 0) {
                        return;
                    }

                    var $begindate = $row.find('input[name=Begin_Date]');

                    if ($row.find('.js-subtable-org-id').val() === null || $begindate.length > 0 && $begindate.val() === "") {

                        PDMS.Utility.MessageBox.info('Incomplete context at row #' + (rowIdx + 1) + ", Please fill complete before add new row.");
                        allowAdd = false;
                        return false;
                    }
                });

                if (allowAdd) {
                    var row = dataTable.row.add({
                        "Organization_UID": 0,
                        "Org": "",
                        "Organization_Name": "",
                        "UserOrg_Begin_Date": null,
                        "UserOrg_End_Date": null,
                    }).draw();

                    $tr = $(row.node());
                    $tr.find('.date').datetimepicker(PDMS.Utility.Settings.DatetimepickerFromToday);
                    $tr.find('.js-subtable-org-id').select2(orgSelect2Option);
                }
            });
            //[删除User拥有的Org]按钮
            $('#js_btn_del_Org').on('click', function () {

                var dataTable = UserOrgSetting.GetSubDatatable();

                var $checkedItems = $('#js_Org_table .js-checkbox-item:checked');

                if ($checkedItems.length == 0) {

                    PDMS.Utility.MessageBox.info("Please select data to delete");
                    return;

                } else {

                    $.map($checkedItems, function (checkbox) {
                        dataTable.row($(checkbox).parents('tr')).remove().draw();
                    });

                    dataTable.rows().every(function (rowIdx, tableLoop, rowLoop) {
                        dataTable.cell(rowIdx, 1).data(rowIdx + 1).draw()
                    });
                }
            });
            //User NTID文本框失去焦点后根据内容自动填充User Name
            $('#js_input_user_ntid').on('blur', function () {

                $.get(UserOrgSettingUrls.getUserName, { User_NTID: $(this).val() },

                    function (data) {
                        var userName = '', accountUId = 0;

                        if (data !== null) {
                            userName = data.User_Name;
                            accountUId = data.Account_UID;

                            $.post(UserOrgSettingUrls.QueryUserOrg, { uuid: accountUId }, function (data) {
                                var subTable = $('#js_org_table_for_view').DataTable({
                                    columns: UserOrgSetting.SubColumnsForView,
                                    ordering: false,
                                    data: data.UserOrgWithOrgs,
                                    destroy: true
                                });

                                if (data.UserOrgWithOrgs.length > 0) {

                                    $('#js_panal_for_add').show();
                                } else {

                                    $('#js_panal_for_add').hide();
                                }
                            });
                        } else {
                            $('#js_panal_for_add').hide();
                        }

                        $('#js_input_user_name').val(userName);
                        $("#js_hidden_account_uid").val(accountUId);
                    });
            });

            //新增保存Org按钮js_btn_save_new_UserOrg
            $('#js_btn_save_new_UserOrg').click('click', function () {

                var userName = $.trim($('#js_input_user_name').val());
                var accountUID = $("#js_hidden_account_uid").val();

                if (accountUID == 0) {
                    PDMS.Utility.MessageBox.info("Please input the right User NTID");
                } else {

                    if ($("#js_form_maintain").valid()) {

                        var submitJson = { Account_UID: accountUID, User_Name: userName };

                        if (SaveCheck(submitJson)) {
                            if (submitJson.UserOrgWithOrgs.length > 0) {
                                $.post(UserOrgSettingUrls.AddUserOrg, { jsonUserWithPlant: JSON.stringify(submitJson) }, function (data) {
                                    if (data == 'SUCCESS') {
                                        PDMS.Utility.MessageBox.info("Save Success");
                                        $("#js_form_maintain input").val('');
                                        $("#js_hidden_account_uid").val(0);
                                        UserOrgSetting.GetSubDatatable().clear().draw();
                                        $('#js_panal_for_add').hide();
                                    } else {
                                        PDMS.Utility.MessageBox.error(data);
                                    }
                                });
                            } else {
                                PDMS.Utility.MessageBox.error("Please add at least one organization");
                            }
                        }
                    }
                }
            });

            //修改保存Function按钮
            $('#js_btn_save_edit_UserOrg').click('click', function () {
                var userName = $.trim($('#js_input_user_name').val());
                var accountUID = $("#js_hidden_account_uid").val();

                var submitJson = { Account_UID: accountUID, User_Name: userName };
                if (SaveCheck(submitJson)) {

                    $.post(UserOrgSettingUrls.modifyUserOrg, { jsonUserWithPlant: JSON.stringify(submitJson) }, function (data) {
                        if (data == 'SUCCESS') {
                            PDMS.Utility.MessageBox.info("Save Success");
                            UserOrgSetting.QueryUserOrgs();
                            $('#js_edit_modal').modal('hide');
                        } else {
                            PDMS.Utility.MessageBox.error(data);
                        }
                    });
                }

            });

