@model PDMS.Model.ViewModels.matNDDetail
<section class="content portal-content">
    <div class="row">
        <div class="col-xs-12" id="js_criteria_alert_cnt">
        </div>
        <div class="col-md-12 col-lg-9">
            <h4 class="margin-td-5" id="js_search_keywords"></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-md-12 col-lg-8">
            </div>
            <div class="col-md-12 search-field col-lg-4">
                <a id="js_btn_export" class="btn btn-primary btn-sm" role="button">
                    <i class="glyphicon glyphicon-save"></i> 导出
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 table-container">
            <table class="table table-striped table-hover table-condensed nowrap" id="js_Bom_datatable">
                <thead>
                    <tr>
                        <th class="table-col-seq nosort">序号</th>
                        <th class="table-col-action nosort">操作</th>
                        <th>厂区</th>
                        <th>Business Group</th>
                        <th>功能厂</th>
                        <th>状态</th>
                        <th>机台类型</th>
                        <th>料号</th>
                        <th>品名</th>
                        <th>型号</th>
                        <th>预计开机数量</th>
                        <th>备品寿命</th>
                        <th>每月单机用量</th>
                        <th>毛需求数量</th>
                        <th>用户调整量</th>
                        <th>实际需求量</th>
                        <th>计算日期</th>
                        <th>需求日期</th>
                        <th>申请者</th>
                        <th>申请时间</th>
                        <th>审核者</th>
                        <th>审核时间</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th class="table-col-seq nosort">序号</th>
                        <th class="table-col-action nosort">操作</th>
                        <th>厂区</th>
                        <th>Business Group</th>
                        <th>功能厂</th>
                        <th>状态</th>
                        <th>机台类型</th>
                        <th>料号</th>
                        <th>品名</th>
                        <th>型号</th>
                        <th>预计开机数量</th>
                        <th>备品寿命</th>
                        <th>每月单机用量</th>
                        <th>毛需求数量</th>
                        <th>用户调整量</th>
                        <th>实际需求量</th>
                        <th>计算日期</th>
                        <th>需求日期</th>
                        <th>申请者</th>
                        <th>申请时间</th>
                        <th>审核者</th>
                        <th>审核时间</th>
                    </tr>
                </tfoot>
            </table>
            <div id="page" class="row"></div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-md-12 col-lg-8">
                    </div>
                    <div class="col-md-12 search-field col-lg-4">
                        <a class="fa btn btn-primary" href="../StorageManage/MaterialSparepartsDemandList">
                            <i class="glyphicon glyphicon-backward"></i>
                            返回
                        </a>

                        @if (Model.IsView)  //查看
                        {
                            if (Model.Status_UID == 435 || Model.Status_UID == 438)
                            {
                                <button type="button" class="fa fa-upload btn btn-primary" id="bt_submit"> 提交</button>
                                <button type="button" class="fa fa-upload btn btn-primary" id="bt_delete"> 删除</button>
                            }
                            if (Model.Status_UID == 436)    //待审核
                            {
                                <button type="button" class="fa fa-save btn btn-primary" id="bt_approve"> 审核</button>
                                <button type="button" class="fa ui-icon-cancel btn btn-primary" id="bt_cancle"> 审核取消</button>
                            }
                            if (Model.Status_UID == 437)    //  已审核
                            {
                                <button type="button" class="fa ui-icon-cancel btn btn-primary" id="bt_cancle"> 审核取消</button>
                            }
                        }
                        else  //编辑
                        {
                            <button type="button" class="fa fa-save btn btn-primary" id="bt_save"> 保存</button>
                            <button type="button" class="fa fa-upload btn btn-primary" id="bt_submit"> 提交</button>
                        }
                    </div>
                </div>
            </div>
        </div><!--/表格-->
    </div>

</section>

@section ViewModals{

    <div class="modal fade" id="js_search_modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">查询</h4>
                </div>
                <div class="modal-body">
                    <form id="js_form_query" class="form-horizontal" data-need-validate="true">
                        <div class="row">
                            <input type="hidden" name="Material_Spareparts_Demand_UID" id="Material_Spareparts_Demand_UID" value=@Model.Material_Normal_Demand_UID />
                            <input type="hidden" name="Status_UID" id="Status_UID" value=@Model.Status_UID />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-sm" id="js_btn_clear"><i class="fa fa-eraser"></i> 清空</button>
                    <button type="button" class="btn btn-primary btn-sm" id="js_btn_query"><i class="fa fa-search"></i> 查询</button>
                </div>
            </div>
        </div>
    </div>

}
@section ViewScripts{

    <script type="text/javascript">

        $(function () {
            var subDatatable = null;
            var MatSDDetailSetting = (function () {
            var urls = {
                //画面初始化加载
                queryMatSDDetails: '@Url.Action("QueryMatSDDetails", "StorageManage")',
                editSDUserAdjustQty: '@Url.Action("EditSDUserAdjustQty", "StorageManage")',
                approveMatSD: '@Url.Action("ApproveMatSD", "StorageManage")',
                disApproveMatSD: '@Url.Action("DisapproveMatSD", "StorageManage")',
                doSDExportFunction:'@Url.Action("DoSDExportFunction", "StorageManage")',
                deleteMatSD:'@Url.Action("DeleteMatSD", "StorageManage")',
                viewMatSparepartsDemandDetails: '@Url.Action("MaterialSparepartsDemandDetail", "StorageManage")',
                deleteMatSparepartsDemandList: '@Url.Action("DeleteMatSparepartsDemandList", "StorageManage")'
            };
            //#region 定义字段列
            var columns = [{
                    data: null,
                    className: "table-col-seq"
                }, {
                    createdCell: function (td, cellData, rowData, row, col) {
                        var buttonDelete = '<button type="button" class="btn btn-primary btn-xs js-grid-delete"   data-id="' + rowData.Material_Spareparts_Demand_UID + '">删除</button>';
                        var result = '<button class="btn btn-primary btn-xs" rel="action-popover">' +
                                    '<i class="fa fa-reorder"></i>' +
                                    '</button>' +
                                    '<div class="hidden popover-content">' +
                                        '{0}' +
                                    '</div>';
                        //fky2017/11/13
                        //if (rowData.Status_UID == 410 || rowData.Status_UID == 413) {
                        if (rowData.Status_UID == 435 || rowData.Status_UID == 438) {
                            result = result.replace('{0}', buttonDelete);
                        } else {
                            result = result.replace('{0}', '');
                        }
                        $(td).html(result);
                    },
                    className: "text-center"
                }, {
                    data: "Plant",
                    className: "min-col-xs"
                }, {
                    data: "BG",
                    className: "min-col-xs"
                }, {
                    data: "FunPlant",
                    className: "min-col-xs"
                }, {
                    data: "Status",
                    className: "min-col-xs"
                }, {
                    data: "EQP_Type",
                    className: "min-col-xs"
                }, {
                    data: "Material_Id",
                    className: "min-col-xs"
                }, {
                    data: "Material_Name",
                    className: "min-col-xs"
                }, {
                    data: "Material_Types",
                    className: "min-col-xs"
                }, {
                    data: "Forecast_PowerOn_Qty",
                    className: "min-col-xs text-right"
                }, {
                    data: "Material_Life",
                    className: "min-col-xs text-right"
                }, {
                    data: "Monthly_Consumption",
                    className: "min-col-xs text-right"
                }, {
                    data: "Calculated_Demand_Qty",
                    className: "min-col-xs text-right"
                }, {
                    data: null,
                    createdCell: function (td, cellData, rowData, row, col) {
                        debugger;
                        if ('@Model.IsView'=='True') {
                            if (@Model.Status_UID == 435 || @Model.Status_UID == 438){
                                var result = '<input class="form-control product-input-text text-right" type="number" disabled name="User_Adjustments_Qty" style="width:70px;" id="' + rowData.Material_Spareparts_Demand_UID + '" class="form-control input-sm input_update_no" data-qty1="'+rowData.Calculated_Demand_Qty+'" data-qty2="'+rowData.Actual_Qty+'"  value="' + rowData.User_Adjustments_Qty + '">';
                            }else{
                                var result = '<input class="form-control product-input-text text-right" type="number" disabled name="User_Adjustments_Qty" style="width:70px;" id="' + rowData.Material_Spareparts_Demand_UID + '" class="form-control input-sm input_update_no"  value="' + rowData.User_Adjustments_Qty + '">';
                            }
                            $(td).html(result);
                        }else {
                            if (@Model.Status_UID == 435 || @Model.Status_UID == 438){
                                var result = '<input class="form-control product-input-text text-right" type="number" name="User_Adjustments_Qty" style="width:70px;" id="' + rowData.Material_Spareparts_Demand_UID + '" class="form-control input-sm input_update_no" data-qty1="'+rowData.Calculated_Demand_Qty+'" data-qty2="'+rowData.Actual_Qty+'"  value="' + rowData.User_Adjustments_Qty + '">';
                            }else{
                                var result = '<input class="form-control product-input-text text-right" type="number" disabled name="User_Adjustments_Qty" style="width:70px;" id="' + rowData.Material_Spareparts_Demand_UID + '" class="form-control input-sm input_update_no"  value="' + rowData.User_Adjustments_Qty + '">';
                            }
                            $(td).html(result);
                        }
                    },
                    className: "min-col-xs"
                }, {
                    data: "Actual_Qty",
                    className: "min-col-xs text-right"
                }, {
                    data: "Calculation_Date",
                    className: "min-col-xs"
                }, {
                    data: "Demand_Date",
                    className: "min-col-xs"
                }, {
                    data: "ApplicantUser",
                    className: "min-col-xs"
                }, {
                    data: "Applicant_Date",
                    className: "min-col-xs"
                }, {
                    data: "ApproverUser",
                    className: "min-col-xs"
                }, {
                    data: "Approver_Date",
                    className: "min-col-xs"
                }];

            //#endregion 定义字段列

            var _getParams = function () {
                return $('#js_form_query').serialize().replace(/\+/g, " ");
            };

            var _queryMatSDDetails = function (firstLoad, buildCriteria) {

                var config = {
                    pageId: "#page",
                    tableId: "#js_Bom_datatable",
                    remoteUrl: urls.queryMatSDDetails,
                    searchParams: _getParams(),
                    tableOptions: {
                        scrollX: true,
                        autoWidth: true,
                        columns: columns
                    }
                };
                if (!firstLoad) {
                    $('#page').page('destroy');
                }
                if (buildCriteria) {
                    PDMS.Utility.Criteria.Build();
                }
                var chk_value = [];
                //fky2017/11/13
                @*if (@Model.Status_UID!=410 && @Model.Status_UID!=413) {*@
                if (@Model.Status_UID!=435 && @Model.Status_UID!=438) {
                    chk_value.push(1);
                }
                table = PDMS.Utility.ReturnDataTable.Set(config, chk_value);
                PDMS.Utility.Pages.Set(config);
                PDMS.Utility.Pages.Set(config);
                $('table thead tr').find('th').removeClass('text-right');
            };
            return {
                urls: urls,
                Init: function () {
                    PDMS.Utility.Criteria.Init();
                    _queryMatSDDetails(true, false);
                    if ('@Model.IsView'=='True') {
                        $("#bt_approve").show();
                        $("#bt_cancle").show();
                    }else {
                        $("#bt_approve").hide();
                        $("#bt_cancle").hide();
                    }
                },
                queryMatSDDetails: function (buildCriteria) {
                    if (!buildCriteria) {
                        buildCriteria = false;
                    }
                    _queryMatSDDetails(false, buildCriteria);
                },
                GetDatatable: function () {
                if (subDatatable == null) {
                    subDatatable = $('#js_Bom_datatable').DataTable({
                        paging: false,
                        searching: false,
                        ordering: false,
                        retrieve: true,
                        columns: columns
                    });
                }
                return subDatatable;
            },
            }
        })();

            MatSDDetailSetting.Init();

        //存档(修改用户调整量)-----START
        $('#bt_save').click(function () {
            var dataTable = MatSDDetailSetting.GetDatatable();
            var DemandValue = {};
            var DemandList = [];
            dataTable.rows().every(function (rowIdx, tableLoop, rowLoop) {
                    var sub = {};
                    var row = $('#js_Bom_datatable>tbody>tr').eq(rowIdx);
                    var User_Adjust_Qty = $.trim(row.find('input[name=User_Adjustments_Qty]').val());
                    var Material_Spareparts_Demand_UID = $.trim(row.find('input[name=User_Adjustments_Qty]').attr('id'));
                    sub["User_Adjustments_Qty"] = User_Adjust_Qty;
                    sub["Material_Spareparts_Demand_UID"] = Material_Spareparts_Demand_UID;
                    DemandList.push(sub);
                });
            var url = MatSDDetailSetting.urls.editSDUserAdjustQty;
            DemandValue.editList = DemandList;
            //fky2017/11/13
            //DemandValue.Status_UID = 410;
            DemandValue.Status_UID = 435;
            $.post(url, { jsonDemandList: JSON.stringify(DemandValue) }, function (data) {
                $.unblockUI();
                if (data == 'SUCCESS') {
                    PDMS.Utility.MessageBox.info("保存成功！");
                    MatSDDetailSetting.queryMatSDDetails();
                } else {
                    PDMS.Utility.MessageBox.error(data);
                }
            });
        })
        //存档(修改用户调整量)-----END

        //提交-----------START
        $('#bt_submit').click(function () {
            var dataTable = MatSDDetailSetting.GetDatatable();
            var DemandValue = {};
            var DemandList = [];
            dataTable.rows().every(function (rowIdx, tableLoop, rowLoop) {
                var sub = {};
                var row = $('#js_Bom_datatable>tbody>tr').eq(rowIdx);
                var User_Adjust_Qty = $.trim(row.find('input[name=User_Adjustments_Qty]').val());
                var Material_Spareparts_Demand_UID = $.trim(row.find('input[name=User_Adjustments_Qty]').attr('id'));
                sub["User_Adjustments_Qty"] = User_Adjust_Qty;
                sub["Material_Spareparts_Demand_UID"] = Material_Spareparts_Demand_UID;
                DemandList.push(sub);
            });
            var url = MatSDDetailSetting.urls.editSDUserAdjustQty;
            DemandValue.editList = DemandList;
            //fky2017/11/13
            //DemandValue.Status_UID = 411;
            DemandValue.Status_UID = 436;
            $.post(url, { jsonDemandList: JSON.stringify(DemandValue) }, function (data) {
                $.unblockUI();
                if (data == 'SUCCESS') {
                    var uid = @Model.Material_Normal_Demand_UID,
                           //fky2017/11/13
                          // Status_UID = 411,
                            Status_UID = 436,
                           url = MatSDDetailSetting.urls.viewMatSparepartsDemandDetails + '?Material_Spareparts_Demand_UID=' + uid +
                                    '&Status_UID=' + Status_UID + "&IsView=@Model.IsView";
                    PDMS.Utility.MessageBox.confirm("提交成功，状态更新为:待审核。", function () {
                        window.location.href = url;
                    });
                } else {
                    PDMS.Utility.MessageBox.error(data);
                }
            });
        })
            //提交---------------END

            //审核完成--------START
        $('#bt_approve').click(function() {
            var Material_Spareparts_Demand_UID = $('#js_search_modal').find('input[name=Material_Spareparts_Demand_UID]').val(),
                url = MatSDDetailSetting.urls.approveMatSD;
            $.post(url,{Material_Spareparts_Demand_UID:Material_Spareparts_Demand_UID},function(data) {
                if (data.length > 2) {
                    PDMS.Utility.MessageBox.error(data);
                } else {
                    var uid = @Model.Material_Normal_Demand_UID,
                           //fky2017/11/13
                           //Status_UID = 412,
                               Status_UID = 437,
                           url = MatSDDetailSetting.urls.viewMatSparepartsDemandDetails + '?Material_Spareparts_Demand_UID=' + uid +
                                    '&Status_UID=' + Status_UID + "&IsView=@Model.IsView";
                    PDMS.Utility.MessageBox.confirm("审核成功，状态更新为:已审核。", function () {
                        window.location.href = url;
                    });
                }
            })
        })
            //审核完成----------END

            //审核取消----------START
        $('#bt_cancle').click(function(data) {
            var Material_Spareparts_Demand_UID = $('#js_search_modal').find('input[name=Material_Spareparts_Demand_UID]').val(),
                url = MatSDDetailSetting.urls.disApproveMatSD;
            $.post(url,{Material_Spareparts_Demand_UID:Material_Spareparts_Demand_UID},function(data) {
                if (data.length > 2) {
                    PDMS.Utility.MessageBox.error(data);
                } else {
                    var uid = @Model.Material_Normal_Demand_UID;
                    var Status_UID = 438;   //审核取消
                    var url = MatSDDetailSetting.urls.viewMatSparepartsDemandDetails + '?Material_Spareparts_Demand_UID=' + uid+
                                    '&Status_UID=' + Status_UID + "&IsView=@Model.IsView";
                    PDMS.Utility.MessageBox.confirm("审核取消成功，状态更新为:审核取消。", function () {
                        window.location.href = url;
                    });
                }
            })
        })
            //审核取消-------------END
            //删除----------START
            $('#bt_delete').click(function(data) {
                var Material_Spareparts_Demand_UID = $('#js_search_modal').find('input[name=Material_Spareparts_Demand_UID]').val(),
                    url = MatSDDetailSetting.urls.deleteMatSparepartsDemandList;
                $.post(url,{Material_Spareparts_Demand_UID:Material_Spareparts_Demand_UID},function(data) {
                    if (data.length > 2) {
                        PDMS.Utility.MessageBox.error(data);
                    } else {
                        var uid = @Model.Material_Normal_Demand_UID;
                        var Status_UID = 439;   //删除
                        var url = MatSDDetailSetting.urls.viewMatSparepartsDemandDetails + '?Material_Spareparts_Demand_UID=' + uid+
                                        '&Status_UID=' + Status_UID + "&IsView=@Model.IsView";
                        PDMS.Utility.MessageBox.confirm("删除成功，状态更新为:已删除。", function () {
                            window.location.href = url;
                        });
                    }
                })
            })
            //删除-------------END

            //用户调整量变更---START
            $('#js_Bom_datatable tbody').find('input[name=User_Adjustments_Qty]').blur(function() {
                $('#js_Bom_datatable tbody tr').each(function() {
                    $(this).find('td:eq(15)').text(Number($(this).find('td:eq(13)').text())+Number($(this).find('input[name=User_Adjustments_Qty]').val()));
                })
            })
            //用户调整量变更-----END

            //Grid中删除按钮---START
        $('body').on('click', '.js-grid-delete', function () {
            var Material_Spareparts_Demand_UID = $(this).attr('data-id');
            PDMS.Utility.MessageBox.confirm("确定要删除?", function () {
                var url = MatSDDetailSetting.urls.deleteMatSD;
                $.post(url, { Material_Spareparts_Demand_UID: Material_Spareparts_Demand_UID }, function (data) {
                    if (data.length > 2) {
                        PDMS.Utility.MessageBox.error(data);
                    } else {
                        @*var uid = @Model.Material_Normal_Demand_UID;
                        var Status_UID = 439;
                        var url = MatSDDetailSetting.urls.viewMatSparepartsDemandDetails + '?Material_Spareparts_Demand_UID=' + uid+
                                        '&Status_UID=' + Status_UID + "&IsView=@Model.IsView";
                        PDMS.Utility.MessageBox.confirm("删除成功，状态更新为:已删除。", function () {
                            window.location.href = url;
                        });*@
                        window.location.reload();
                    }
                });
            });
        })
            //Grid中删除按钮-----END

            //导出按钮---START
        $('#js_btn_export').click(function () {
            var url = MatSDDetailSetting.urls.doSDExportFunction,
                    uid =$('#js_search_modal').find('input[name=Material_Spareparts_Demand_UID]').val();
            url += "?uid=" + uid;
                window.location.href = url;
        })
            //导出按钮-----END
    })
    </script>
}
