                }
                , {
                    data: null,
                    className: "min-col-lg js-subtable-plantcode",
                    render: function (data, type, rowData, meta) {
                        //var isEdit = rowData.Material_Uid > 0;

                        //var html = isEdit ? data :
                        // '<input type="text" name="Desc" class="form-control input-sm js-subtable-plant" value="' + data + '">';
