                        var isValid = true;
                        var errorMsg = "";
                        var plant = $('#js_form_dept').find('select[name=Plant_Organization_UID] option:selected').text();
                        var bg = $('#js_form_dept').find('select[name=BG_Organization_UID] option:selected').text();
                        if (plant == '' || bg == '') {
                            errorMsg += 'Please choose [Site] and [BG]';
                            isValid = false;
                        }
                        if ($('#js_form_dept').find('input[name=Exception_Dept_Name]').val() == "") {
                            errorMsg += 'Please type [Department Name];  ';
                            isValid = false;
                        }
                        if (!isValid) {
                            if (errorMsg != "") {
                                PDMS.Utility.MessageBox.info(errorMsg);
                            }
                            return false;
                        }
                    },
                    success: function (data) {
                        if (data.Repeat == 0) {
                            $('#js_edit_dept_modal').modal('hide');
                            PDMS.Utility.MessageBox.info('Save successfully !');
                            //window.location.reload();
                            //查询刷新的
                            ExceptionRul.queryExceptionDept();
                        }
                        else if (data.Repeat == 1) {
                            PDMS.Utility.MessageBox.info('Same name exists, please re-type !');
                        }
                        else {
                            PDMS.Utility.MessageBox.info("Save failed！");
                        }
                    }
                });
            })
