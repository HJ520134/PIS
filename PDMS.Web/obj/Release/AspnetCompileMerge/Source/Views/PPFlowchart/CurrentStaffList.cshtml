                                        @foreach (KeyValuePair<int, string> funplantItem in ViewBag.FunPlant)
                                        {
                                            <option value=@funplantItem.Key selected="selected">@funplantItem.Value</option>
                                        }
                                    </select>
                                </div>
                            </div>*@
