@section ViewScripts{
    <script type="text/javascript">
        $(function () {
            var BUMaintenance = (function () {
                var urls = {
                    //画面初始化加载
                    queryBUs: '@Url.Action("QueryBUDetails", "Settings")',
                    //根据输入的BUID获取BUName
                    getBUIDAndBUName: '@Url.Action("GetBUIDAndBUNameByBUID","Settings")',
                    //根据主键获取单笔信息
                    QueryBU: '@Url.Action("QueryBUDetail", "Settings")',
                    //删除BUD信息
                    DeleteBU: '@Url.Action("DeleteBUDDetail", "Settings")',
                    //检查BUD的BeginDate和EndDate是否合法
                    CheckBeginDateAndEndDate: '@Url.Action("CheckBeginDateAndEndDate", "Settings")'
                };
                //#region 定义字段列
                var columns = [{
                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).html('<input type="checkbox" name="cktrans" class="js-checkbox-item" value="' + rowData.SystemBUDDTO.BU_D_UID + '">')
                             .addClass('table-col-checkbox');
                    },
                    className: "text-center"
                }, {
                    createdCell: function (td, cellData, rowData, row, col) {
                        var buttonEdit = '<button type="button" class="btn btn-primary btn-xs js-grid-edit" data-id="' + rowData.SystemBUDDTO.BU_D_UID + '">Edit</button>';
                        var result = '<button class="btn btn-primary btn-xs" rel="action-popover">' +
                                    '<i class="fa fa-reorder"></i>' +
                                    '</button>' +
                                    '<div class="hidden popover-content">' +
                                        '{0}' +
                                        '<button type="button" class="btn btn-primary btn-xs js-grid-delete" data-id="' + rowData.SystemBUDDTO.BU_D_UID + '">Delete</button>' +
                                    '</div>';
                        if (rowData.SystemBUDDTO.End_Date == null) {
                            result = result.replace('{0}', buttonEdit);
                        }
                        else {
                            var nowDate = moment().format("YYYY-MM-DD");
                            var systemTime = rowData.SystemBUDDTO.End_Date;
                            if (moment(nowDate).isBefore(systemTime) || moment(nowDate).isSame(systemTime)) { //如果系统日期大于当前日期则显示Edit按钮
                                result = result.replace('{0}', buttonEdit);
                            }
                            else {
                                result = result.replace('{0}', '<button type="button" class="btn btn-primary btn-xs js-grid-edit" data-id="' + rowData.SystemBUDDTO.BU_D_UID + '"disabled>Edit</button>');
                            }
                        }
                        $(td).html(result);
                    },
                    className: "text-center"
                }, {
                    data: null,
                    className: "table-col-seq"
                }, {
                    data: "SystemBUMDTO.BU_ID",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUMDTO.BU_Name",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUDDTO.BU_D_ID",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUDDTO.BU_D_Name",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUDDTO.Begin_Date",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUDDTO.End_Date",
                    className: "min-col-xs"
                }, {
                    data: "SystemUserDTO.User_Name",
                    className: "min-col-lg"
                }, {
                    data: "SystemBUDDTO.Modified_Date",
                    className: "min-col-lg"
                }];
                //#endregion 定义字段列
                var _getParams = function () {
                    return $('#js_form_query').serialize().replace(/\+/g, " ");
                };
                var _queryUsers = function (firstLoad,buildCriteria) {
                    var config = {
                        pageId: "#page",
                        tableId: "#js_user_datatable",
                        remoteUrl: urls.queryBUs,
                        searchParams: _getParams(),
                        tableOptions: {
                            columns: columns
                        }
                    };
                    if (!firstLoad) {
                        $('#page').page('destroy');
                    }
                    if (buildCriteria) {
                        PDMS.Utility.Criteria.Build();
                    }
                    PDMS.Utility.Pages.Set(config);                    
                };              
                return {
                    urls: urls,
                    Init: function () {
                        PDMS.Utility.Criteria.Init();
                        _queryUsers(true,false);
                    },
                    QueryBUs: function (buildCriteria) {
                        if (!buildCriteria) {
                            buildCriteria = false;
                        }
                        _queryUsers(false, buildCriteria);
                    }
                }
            })();
            BUMaintenance.Init();
            $('#js_form_user_edit').validate({
                errorContainer: $('ul.validate-error'),
                errorLabelContainer: $('#js_edit_modal ul.validate-error'),
                wrapper: 'li'
            });
            //#region 新增或修改Div事件
            //为新增或修改Modal，注册事件
            $('#js_edit_modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                $('#js_edit_modal').find('input[name=BU_Name]').attr("readonly", "readonly");
                $('#s_input_bu_id').rules('add', {
                    required: true,
                    maxlength: 20,
                    remote: "CheckBuExistById_Two",
                    messages: { required: "Please enter bu id", maxlength: "Please enter no more than {0} characters in Bu Id.", remote: "Bu Id is not exist" }
                });
                $('#s_input_bu_name').rules('add', {
                    required: true,
                    messages: { required: "Please enter bu name" }
                });
                $('#s_input_begin_date').rules('add', {
                    required: true,
                    messages: { required: "Please enter begin date" }
                });
                $('#s_input_end_date').rules('add', {
                    StartDateGTEnd: "#s_input_begin_date",
                    messages: { StartDateGTEnd: PDMS.Utility.Settings.ValidateMessage.twoDateError }
                });
                //编辑状态
                if (button.hasClass('js-grid-edit')) {
                    $('#js_edit_modal').find(".modal-title").html('Edit BU Detail');
                    $('#js_btn_save_new_bu ').hide();
                    $('#js_btn_save_edit_bu').show();
                    $('#js_edit_modal').find('input[name=isEdit]').val(true);
                    $('#js_edit_modal').find('input[name=BU_ID]').attr("readonly", "readonly");
                    $('#js_edit_modal').find('input[name=Begin_Date]').attr("disabled", true);
                }
                //新增状态
                if (button.attr('id') == 'js_btn_add_bu') {
                    //新增状态
                    $('#js_edit_modal').find(".modal-title").html('Add BU Detail');
                    $('#js_edit_modal').find('input[name=isEdit]').val(false);
                    $('#js_btn_save_new_bu').show();
                    $('#js_btn_save_edit_bu').hide();
                    $('#js_edit_modal').find('input[name=BU_ID]').removeAttr('readonly');
                    $('#js_edit_modal').find('input[name=BU_D_ID]').removeAttr('readonly');
                    $('#js_edit_modal').find('input[name=Begin_Date]').removeAttr('disabled');;
                }
            });
            //#region 光标移走事件
            $('#s_input_bu_id').on('blur', function () {
                $.get(BUMaintenance.urls.getBUIDAndBUName, { BU_ID: $(this).val() },
                   function (data) {
                       if (data.BU_Name != null) {
                           $('#s_input_bu_id').val(data.BU_ID);
                           $('#s_input_bu_name').val(data.BU_Name);
                       }
                       else {
                           $('#s_input_bu_name').val('');
                       }
                   });
            });
            //#endregion
            //#region 搜索弹出框初始化
            $('#js_search_modal').on('show.bs.modal', function (event) {
                $('#js_s_input_ref_date').val(moment().format("YYYY-MM-DD"));
            });
            //#endregion
            //#region 点击GridView上的Edit按钮事件
            $('body').on('click', '.js-grid-edit', function () {
                var BU_D_UID = $(this).attr('data-id'),
                    url = BUMaintenance.urls.QueryBU;
                $.post(url, { BU_D_UID: BU_D_UID }, function (data) {
                    $('#BU_D_UID').val(data.SystemBUDDTO.BU_D_UID);
                    $('#js_edit_modal').find('input[name=BU_ID]').val(data.SystemBUMDTO.BU_ID);
                    $('#js_edit_modal').find('input[name=BU_Name]').val(data.SystemBUMDTO.BU_Name);
                    $('#js_edit_modal').find('input[name=BU_D_ID]').val(data.SystemBUDDTO.BU_D_ID);
                    $('#js_edit_modal').find('input[name=BU_D_Name]').val(data.SystemBUDDTO.BU_D_Name);
                    $('#js_edit_modal').find('input[name=Begin_Date]').val(data.SystemBUDDTO.Begin_Date);
                    $('#js_edit_modal').find('input[name=End_Date]').val(data.SystemBUDDTO.End_Date);
                    $('#js_edit_modal').find('input[name=isEdit]').val(true); 
                    $('#s_input_end_date').val(data.SystemBUDDTO.End_Date).attr("disabled", data.SystemBUDDTO.End_Date != null);
                });
                $('#js_edit_modal').modal('show', $(this));
            });
            //#endregion 点击Edit按钮事件
            //#endregion 新增或修改Div事件
            //#region 新增或编辑按钮提交前的验证
            $('#js_btn_save_edit_bu').on('click', function () {
                if ($("#js_form_user_edit").valid()) {
                    return ValidDate(true);
                }
            });
            $('#js_btn_save_new_bu').on('click', function () {
                if ($("#js_form_user_edit").valid()) {
                    return ValidDate(false);
                }
            });
            var ValidDate = function (isEdit)
            {
                var result = 0;
                var BU_ID = $('#s_input_bu_id').val();
                var BU_Name = $('#s_input_bu_name').val();
                var startDate = $('#s_input_begin_date').val();
                var endDate = $('#s_input_end_date').val();
                var url = BUMaintenance.urls.CheckBeginDateAndEndDate;
                $.ajax({
                    url: url,
                    data: { BU_ID: BU_ID, BU_Name: BU_Name, Begin_Date: startDate, End_Date: endDate, isEdit: isEdit },
                    async: false,
                    dataType: "json",
                    success: function (data) {
                        if (data != '') {
                            PDMS.Utility.MessageBox.info(data)
                        }
                        else {
                            result = 1;
                        }
                    }
                });
                if (result == 1) {
                    return true;
                }
                else {
                    return false;
                }
            }
            //#endregon
            //#region 删除事件
            //删除事件
            $('body').on('click', '.js-grid-delete', function () {
                var BU_D_UID = $(this).attr('data-id');
                PDMS.Utility.MessageBox.confirm("Are you sure to delete this item?", function () {
                    var url = BUMaintenance.urls.DeleteBU;
                    $.post(url, { BU_D_UID: BU_D_UID }, function (data) {
                        if (data != 'FAIL') {
                            BUMaintenance.QueryBUs();
                        } else {
                            PDMS.Utility.MessageBox.error("BU Customer ID already role assigned!");
                        }
                    });
                });
            });
            //#endregion
            $('#js_btn_export').click(function () {
                var $selectList = $('#js_user_datatable').find('.js-checkbox-item:checked');
                var len = $selectList.length;
                if (len == 0) {
                    PDMS.Utility.MessageBox.info('please select datas to export!');
                } else {
                    var uuids = $.map($selectList, function (row) {
                        return row.value;
                    });
                    var url = '@Url.Action("DoExportBUDetail", "Settings")';
                url += "?uuids=" + uuids.toString();
                window.location.href = url;
            }
        });
        //#region 隐藏modal框时清空值
        //隐藏modal框时清空值
        $('#js_edit_modal').on('hidden.bs.modal', function (e) {
            $('#js_edit_modal').find('input').val('');
            $('.list-group.validate-error').empty();
        });
        //#endregion 隐藏modal框时清空值
        //#region 弹出搜索Div的所有方法
        //搜索事件
        $('#btn_search').click(function () {
            if ($("#js_form_query").valid()) {
