                                        '<button type="button" class="btn btn-primary btn-xs js-grid-view" data-id="' + rowData.Function_UID + '">View</button>' +
                                        '<button type="button" class="btn btn-primary btn-xs js-grid-edit" data-id="' + rowData.Function_UID + '">Edit</button>' +
                                        '<button type="button" class="btn btn-primary btn-xs js-grid-delete" data-id="' + rowData.Function_UID + '">Delete</button>' +
                                    '</div>');
