                    };

                    if (!firstLoad) {
                        $('#page').page('destroy');
                        PDMS.Utility.Criteria.Build();
                    }

                    PDMS.Utility.Pages.Set(config);
                };

                return {
                    Init: function () {

                        PDMS.Utility.Criteria.Init();
                        _queryFunctions(true);
                    },
                    QueryFunctions: function () {
                        _queryFunctions(false);
                    },
                    GetSubDatatable: function () {

                        if (subDatatable == null) {

                            subDatatable = $('#js_sub_func_table').DataTable({
                                paging: false,
                                searching: false,
                                ordering: false,
                                retrieve: true,
                                columns: subColumns,
                            });
                        }
                        return subDatatable;
                    },
                    SetSubDatatable: function (datatable) {
                        subDatatable = datatable;
                    },
                    DestroySubTable: function () {
                        if (subDatatable != null) {
                            subDatatable.destroy();
                        }
                    },
                    SubColumns: subColumns,
                    SubColumnsForView: subColumnsForView
                }

            })();
            //#endregion

            FunctionMaintenance.Init();

            //#region Page elements events

            //查询按钮
            $('#js_btn_query').click(function () {

                if ($('#js_form_query').valid()) {

                    FunctionMaintenance.QueryFunctions();
                    $('#js_search_modal').modal('hide');
                }
            });

            //增加SubFun按钮
            $('#js_btn_add_sub_func').on('click', function () {

                var dataTable = FunctionMaintenance.GetSubDatatable();
                var allowAdd = true;

                dataTable.rows().every(function (rowIdx, tableLoop, rowLoop) {
                    for (var i = 2; i < 4; i++) {
                        if ($.trim($(dataTable.cell(rowIdx, i).node()).find('input').val()) === "") {
                            PDMS.Utility.MessageBox.info('Incomplete context at row #' + (rowIdx + 1) + ", Please fill complete before add new row.");
                            allowAdd = false;
                            return;
                        }
                    }
                });
                if (allowAdd) {
                    var row = dataTable.row.add({
                        "System_FunctionSub_UID": 0,
                        "Sub_Fun": "",
                        "Sub_Fun_Name": "",
                        "Sub_Fun_URL": ""
                    }).draw();
                    $(row.node()).find('input[name=Sub_Fun]').removeAttr("readonly");
                }
            });

            //删除SubFun按钮
            $('#js_btn_del_sub_func').on('click', function () {

                var dataTable = FunctionMaintenance.GetSubDatatable();

                var $checkedItems = $('#js_sub_func_table .js-checkbox-item:checked');

                if ($checkedItems.length == 0) {

                    PDMS.Utility.MessageBox.info("Please select data to delete");
                    return;

                } else {

                    var functionUid = $('#js_hidden_function_id').val();

                    $.map($checkedItems, function (checkbox) {
                        var subFun_uid = $(checkbox).val();
                        if (functionUid > 0 && subFun_uid > 0) {

                            $.get(FunctionMaintenanceUrls.deleteSubFunction
                                , { subfunction_UId: subFun_uid }
                                , function (data) {
                                    if (data != "SUCCESS") {
                                        PDMS.Utility.MessageBox.error(data);
                                    } else {
                                        dataTable.row($(checkbox).parents('tr')).remove().draw();
                                    }
                                });

                        } else {
                            dataTable.row($(checkbox).parents('tr')).remove().draw();
                        }

                    });

                    dataTable.rows().every(function (rowIdx, tableLoop, rowLoop) {
                        dataTable.cell(rowIdx, 1).data(rowIdx + 1).draw()
                    });
                }
            });

            //parent function id文本框失去焦点后根据内容自动填充parent function name
            $('#js_input_parent_function_id').on('blur', function () {

                $.get(FunctionMaintenanceUrls.getParentFunc, { functionId: $(this).val() },

                    function (data) {
                        $('#js_input_parent_function_name').val(data.Function_Name);
                    });
            });

            //新增保存Function按钮
            $('#js_btn_save_new_function').click('click', function () {

                if ($.trim($('#js_input_parent_function_id').val()) !== '' && $.trim($('#js_input_parent_function_name').val()) === '') {
                    PDMS.Utility.MessageBox.info("Please input right parent funtion id");

                } else {

                    if ($("#js_form_maintain").valid()) {
                        var flag = true;
                        var dataTable = FunctionMaintenance.GetSubDatatable();
                        var submitJson = $('#js_form_maintain').serializeObject();
                        var FunctionSubs = [];
                        dataTable
                            .rows()
                            .every(function (rowIdx, tableLoop, rowLoop) {
                                var sub = {};
                                var row = $('#js_sub_func_table>tbody>tr').eq(rowIdx);
                                var Sub_Fun = $.trim(row.find('input[name=Sub_Fun]').val());
                                if (Sub_Fun === "") {
                                    PDMS.Utility.MessageBox.info("Sub Function ID Can't be empty at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                if (Sub_Fun.length > 50) {
                                    PDMS.Utility.MessageBox.info("Please enter no more than 50 characters in Sub Function ID at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                sub["Sub_Fun"] = Sub_Fun;

                                var Sub_Fun_Name = $.trim(row.find('input[name=Sub_Fun_Name]').val());
                                if (Sub_Fun_Name === "") {
                                    PDMS.Utility.MessageBox.info("Sub Function Name Can't be empty at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                if (Sub_Fun_Name.length > 30) {
                                    PDMS.Utility.MessageBox.info("Please enter no more than 30 characters in Sub Function Name at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                sub["Sub_Fun_Name"] = Sub_Fun_Name;

                                var Sub_Fun_URL = $.trim(row.find('input[name=Sub_Fun_URL]').val());
                                if (Sub_Fun_URL === "") {
                                    Sub_Fun_URL = 'NA';
                                }
                                if (Sub_Fun_URL.length > 500) {
                                    PDMS.Utility.MessageBox.info("Please enter no more than 500 characters in Sub Function URL at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                sub["Sub_Fun_URL"] = Sub_Fun_URL.toUpperCase();

                                FunctionSubs.push(sub);
                            });

                        if (!flag) { return };

                        submitJson.FunctionSubs = FunctionSubs;

                        $.post(FunctionMaintenanceUrls.addFunction, { jsonFunctionWithSubs: JSON.stringify(submitJson) }, function (data) {
                            if (data == 'SUCCESS') {
                                PDMS.Utility.MessageBox.info("Save Success");
                                $("#js_form_maintain input[type!='hidden']").val('');
                                $("#js_select_is_show").val('true');
                                dataTable.clear().draw();
                            } else {
                                PDMS.Utility.MessageBox.error(data);
                            }
                        });
                    }
                }
            });

            //修改保存Function按钮
            $('#js_btn_save_edit_function').click('click', function () {

                if ($.trim($('#js_input_parent_function_id').val()) !== '' && $.trim($('#js_input_parent_function_name').val()) === '') {
                    PDMS.Utility.MessageBox.info("Please input right parent funtion id");

                } else {

                    if ($("#js_form_maintain").valid()) {
                        var flag = true;

                        var dataTable = FunctionMaintenance.GetSubDatatable();
                        var submitJson = $('#js_form_maintain').serializeObject();
                        var FunctionSubs = [];
                        dataTable
                            .rows()
                            .every(function (rowIdx, tableLoop, rowLoop) {
                                var sub = {};
                                var row = $('#js_sub_func_table>tbody>tr').eq(rowIdx);
                                sub["System_FunctionSub_UID"] = row.find('.js-checkbox-item').val();
                                var Sub_Fun = $.trim(row.find('input[name=Sub_Fun]').val());
                                if (Sub_Fun === "") {
                                    PDMS.Utility.MessageBox.info("Sub Function ID Can't be empty at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                if (Sub_Fun.length > 50) {
                                    PDMS.Utility.MessageBox.info("Please enter no more than 50 characters in Sub Function ID at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                sub["Sub_Fun"] = Sub_Fun;

                                var Sub_Fun_Name = $.trim(row.find('input[name=Sub_Fun_Name]').val());
                                if (Sub_Fun_Name === "") {
                                    PDMS.Utility.MessageBox.info("Sub Function Name Can't be empty at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                if (Sub_Fun_Name.length > 30) {
                                    PDMS.Utility.MessageBox.info("Please enter no more than 30 characters in Sub Function Name at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                sub["Sub_Fun_Name"] = Sub_Fun_Name;

                                var Sub_Fun_URL = $.trim(row.find('input[name=Sub_Fun_URL]').val());
                                if (Sub_Fun_URL === "") {
                                    Sub_Fun_URL = 'NA';
                                }
                                if (Sub_Fun_URL.length > 500) {
                                    PDMS.Utility.MessageBox.info("Please enter no more than 500 characters in Sub Function URL at row #" + (rowIdx + 1));
                                    flag = false;
                                    return;
                                }
                                sub["Sub_Fun_URL"] = Sub_Fun_URL.toUpperCase();

                                FunctionSubs.push(sub);
                            });
                        if (!flag) { return };

                        submitJson.FunctionSubs = FunctionSubs;

                        $.post(FunctionMaintenanceUrls.modifyFunction, { jsonFunctionWithSubs: JSON.stringify(submitJson) }, function (data) {
                            if (data == 'SUCCESS') {
                                PDMS.Utility.MessageBox.info("Save Success");
                                FunctionMaintenance.QueryFunctions(false);
                                $('#js_edit_modal').modal('hide');
                            } else {
                                PDMS.Utility.MessageBox.error(data);
                            }
                        });
                    }
                }

            });

            //导出按钮
            $('#js_btn_export').click(function () {
                var $selectList = $('#js_function_datatable').find('.js-checkbox-item:checked');
                var len = $selectList.length;
                if (len == 0) {
                    PDMS.Utility.MessageBox.info('please select datas to export!');
                } else {
                    var uids = $.map($selectList, function (row) {
                        return row.value;
                    });
                    var url = FunctionMaintenanceUrls.doExportFunction;
                    url += "?uids=" + uids.toString();
                    window.location.href = url;
                }
            });

            //Form Validate
            $('#js_form_maintain').validate({
                errorContainer: $('ul.validate-error'),
                errorLabelContainer: $('#js_edit_modal ul.validate-error'),
                wrapper: 'li'
            });

            //clear query conditions按钮
            $('#js_search_modal').on('click', '.btn-clear', function () {
                $(this).closest('.modal-content').find('input').val('');
            });

            //#region Add/Edit model 出现和消失事件
            $('#js_edit_modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget)
                var modal = $(this)
                var title = modal.find('.modal-title');

                if (button.attr('id') == 'js_btn_add_function') {

                    title.text("Add Function");

                    $('#js_btn_save_edit_function').hide();
                    $('#js_btn_save_new_function').show();
                    $('#js_hidden_function_id').val(0);
                }
                else {
                    title.text("Edit Function");

                    $('#js_btn_save_edit_function').show();
                    $('#js_btn_save_new_function').hide();
                }
            })

            $('#js_edit_modal').on('hidden.bs.modal', function (e) {
                var dataTable = FunctionMaintenance.GetSubDatatable();
                dataTable.clear().draw();

                $('#js_edit_modal').find('input').val('');
                $('.list-group.validate-error').empty();
            });
            //#endregion

            //Grid中编辑按钮
            $('body').on('click', '.js-grid-edit', function () {

                var uid = $(this).data('id'),
                    url = FunctionMaintenanceUrls.queryFunction;

                $.post(url, { uid: uid }, function (data) {

                    $('#js_input_parent_function_id').val(data.Parent_Function_ID);
                    $('#js_input_parent_function_name').val(data.Parent_Function_Name);
                    $('#js_input_function_id').val(data.Function_ID);
                    $('#js_input_function_name').val(data.Function_Name);
                    $('#js_input_func_desc').val(data.Function_Desc);
                    $('#js_input_order_index').val(data.Order_Index);
                    $('#js_input_icon_classname').val(data.Icon_ClassName);
                    $('#js_input_function_url').val(data.URL);
                    $('#js_input_mobile_url').val(data.Mobile_URL);
                    $('#js_select_is_show').val(data.Is_Show ? "true" : "false");
                    $('#js_hidden_function_id').val(data.Function_UID);

                    var subTable = $('#js_sub_func_table').DataTable({
                        columns: FunctionMaintenance.SubColumns,
                        ordering: false,
                        data: data.FunctionSubs,
                        destroy: true
                    });

                    FunctionMaintenance.SetSubDatatable(subTable);
                    $('#js_edit_modal').modal('show');
                });


            });

            //Grid中View按钮
            $('body').on('click', '.js-grid-view', function () {

                var uid = $(this).data('id'),
                    url = FunctionMaintenanceUrls.queryFunction;

                $.post(url, { uid: uid }, function (data) {
                    var $modal = $('#js_view_modal')
                    $modal.find('input[name=Parent_Function_ID]').val(data.Parent_Function_ID);
                    $modal.find('input[name=Parent_Function_Name]').val(data.Parent_Function_Name).attr("disabled");
                    $modal.find('input[name=Function_ID]').val(data.Function_ID).attr("disabled");
                    $modal.find('input[name=Function_Name]').val(data.Function_Name).attr("disabled");
                    $modal.find('input[name=Function_Desc]').val(data.Function_Desc).attr("disabled");
                    $modal.find('input[name=Order_Index]').val(data.Order_Index).attr("disabled");
                    $modal.find('input[name=Icon_ClassName]').val(data.Icon_ClassName).attr("disabled");
                    $modal.find('input[name=URL]').val(data.URL).attr("disabled");
                    $modal.find('select[name=Is_Show]').val(data.Is_Show ? "true" : "false");
                    $modal.find('input[name=Mobile_URL]').val(data.Mobile_URL);
                    
                    var subTable = $('#js_sub_func_table_view').DataTable({
                        columns: FunctionMaintenance.SubColumnsForView,
                        ordering: false,
                        data: data.FunctionSubs,
                        destroy: true
                    });
                    $('#js_view_modal').modal('show');
                });


            });

            //Grid中Delete按钮
            $('body').on('click', '.js-grid-delete', function () {

                var uid = $(this).data('id');

                PDMS.Utility.MessageBox.confirm(
                    "Are you sure to delete this item?"
                    , function () {
                        var url = FunctionMaintenanceUrls.deleteFunction;
                        $.post(url, { uid: uid }, function (data) {
                            if (data == 'SUCCESS') {
                                FunctionMaintenance.QueryFunctions(true);
                            } else {
                                PDMS.Utility.MessageBox.error(data);
                            }
                        });
                    });
            });

            $('#js_btn_clear').click(function () {

                PDMS.Utility.Criteria.Clear();
            });

            //#endregion
        });

    </script>
}


