@section ViewScripts{
    <script type="text/javascript">

        $(function () {

            var OrganizationMaintenance = (function () {
                var needBuildCriteria = false;
                var urls =
                    {
                        EditOrg: '@Url.Action("EditOrg", "Settings")',
                        AddOrg: '@Url.Action("AddOrg", "Settings")',
                        queryOrgs: '@Url.Action("QueryOrgs", "Settings")',
                        queryOrg: '@Url.Action("QueryOrg", "Settings")',
                        deleteOrg: '@Url.Action("DeleteOrg", "Settings")',
                        //deleteOrg: 'Settings/DeleteOrgAPI',
                        exportOrgs: '@Url.Action("DoExportOrg", "Settings")',
                        GetMaxEnddate4Org: '@Url.Action("GetMaxEnddate4Org", "Settings")'
                    };
                var columns = [{
                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).html('<input type="checkbox" name="cktrans" class="js-checkbox-item" value="' + rowData.Organization_UID + '">')
                             .addClass('table-col-checkbox');
                    },
                    className: "text-center"
                },
                {
                    createdCell: function (td, cellData, rowData, row, col) {
                        var disableEdit = false;
                        if (rowData.End_Date !== null && moment().startOf('day').isAfter(rowData.End_Date)) {
                            disableEdit = true;
                        }
                        var html = '<button class="btn btn-primary btn-xs" rel="action-popover">' +
                                        '<i class="fa fa-reorder"></i>' +
                                    '</button>' +
                                    '<div class="hidden popover-content">' +
                                        '<button type="button" class="btn btn-primary btn-xs js-grid-edit ' + (disableEdit ? "disabled" : "") + '" data-id="' + rowData.Organization_UID + '">Edit</button>' +
                                        '<button type="button" class="btn btn-primary btn-xs js-grid-delete" data-id="' + rowData.Organization_UID + '">Delete</button>' +
                                    '</div>';
                        $(td).html(html);
                    },
                    className: "text-center"
                }, {
                    data: null,
                    className: "table-col-seq"
                }, {
                    data: "Organization_ID",
                    className: "min-col-xs"
                }, {
                    data: "Organization_Name",
                    className: "min-col-xs"
                }, {
                    data: "Organization_Desc",
                    className: "min-col-xs"
                }, {
                    data: "OrgManager_Name",
                    className: "min-col-xs"
                }, {
                    data: "OrgManager_Tel",
                    className: "min-col-xs"
                }, {
                    data: "OrgManager_Email",
                    className: "min-col-xs"
                }, {
                    data: "Cost_Center",
                    className: "min-col-xs"
                }, {
                    data: "Begin_Date",
                    className: "min-col-xs"
                }, {
                    data: "End_Date",
                    className: "min-col-xs"
                }, {
                    data: "Modified_UserName",
                    className: "min-col-lg"
                }, {
                    data: "Modified_Date",
                    className: "min-col-lg"
                }];

                var _getParams = function () {
                    if (needBuildCriteria) {
                        return $('#js_form_query').serialize().replace(/\+/g, " ");
                    } else {
                        return null;
                    }
                };

                var _queryOrgs = function (firstLoad) {

                    var config = {
                        pageId: "#page",
                        tableId: "#js_Organization_datatable",
                        remoteUrl: urls.queryOrgs,
                        searchParams: _getParams(),
                        tableOptions: {
                            scrollX: true,
                            scrollCollapse: false,
                            autoWidth: true,
                            columns: columns
                        }
                    };

                    if (!firstLoad) {
                        $('#page').page('destroy');
                    }

                    if (needBuildCriteria) {
                        PDMS.Utility.Criteria.Build();
                    }

                    PDMS.Utility.Pages.Set(config);
                };

                return {
                    urls: urls,
                    Init: function () {
                        //页面初始化加载查询时，初始化Criteria
                        PDMS.Utility.Criteria.Init();
                        _queryOrgs(true);
                    },
                    queryOrgs: function (isSearchBtn) {

                        needBuildCriteria = (isSearchBtn === true ? true : needBuildCriteria);
                        _queryOrgs(false);
                    }
                }

            })();

            OrganizationMaintenance.Init();

            $('#js_btn_query').click(function () {

                if ($("#js_form_query").valid()) {
                    OrganizationMaintenance.queryOrgs(true);
                    $('#js_search_modal').modal('hide');
                }
            });

            //clear query conditions in search modal
            $('#js_btn_clear').click(function () {

                PDMS.Utility.Criteria.Clear(function () {
                    $("#js_s_input_reference_date").val(moment().format("YYYY-MM-DD"));
                    $("#js_s_radio_valid").prop('checked', true);
                });
            });

            $('#js_btn_export').click(function () {
                var $selectList = $('#js_Organization_datatable').find('.js-checkbox-item:checked');
                var len = $selectList.length;
                if (len == 0) {
                    PDMS.Utility.MessageBox.info('please select datas to export!');
                } else {
                    var uids = $.map($selectList, function (row) {
                        return row.value;
                    });
                    var url = OrganizationMaintenance.urls.exportOrgs;
                    url += "?uids=" + uids.toString();
                    window.location.href = url;
                }
            });

            //#region extra configuration of validate in add/edit model, others via data-attribute
            $('#js_form_org_edit').validate({
                errorContainer: $('ul.validate-error'),
                errorLabelContainer: $('#js_edit_modal ul.validate-error'),
                wrapper: 'li'
            });

            $('#js_input_end_date').rules('add', {
                StartDateGTEnd: "#js_input_begin_date",
                messages: { StartDateGTEnd: PDMS.Utility.Settings.ValidateMessage.twoDateError }
            });
            //#endregion

            //do clean up in edit modal show/hide
            $('#js_edit_modal').on('show.bs.modal', function (event) {

                var button = $(event.relatedTarget)
                var modal = $(this)
                var title = modal.find('.modal-title');

                if (button.attr('id') === 'js_btn_add_org') {

                    title.text("Add Organization");
                    $('#js_btn_save_new_Org').show();
                    $('#js_btn_save_edit_Org').hide();
                    $('#Organization_UID_hidden').val(0);
                    $('#js_input_begin_date').attr("disabled", false);
                    $('#js_input_end_date').attr("disabled", false);
                }

                if (button.hasClass('js-grid-edit')) {

                    title.text("Edit Organization");
                    $('#js_btn_save_new_Org').hide();
                    $('#js_btn_save_edit_Org').show();
                    $('#js_input_begin_date').attr("disabled", true);
                }
            })

            $('#js_edit_modal').on('hidden.bs.modal', function (e) {
                $('#js_edit_modal').find('input').val('');
                $('.list-group.validate-error').empty();
            });

            //新增保存Org按钮
            $("#js_btn_save_new_Org").click('click', function () {

                if ($('#js_form_org_edit').valid()) {

                    //check id & name if unique
                    $.get("CheckOrgExistByIdAndName",
                            { id: $.trim($('#js_input_Organization_ID').val()), name: $.trim($('#js_input_Organization_Name').val()) },
                            function (isExist) {

                                if (!isExist) {

                                    //if not exist record with same organization id and name, then insert this new record
                                    var submitJson = $('#js_form_org_edit').serializeObject();

                                    if (moment(submitJson.Begin_Date).diff(moment(), 'days') < 0) {
                                        PDMS.Utility.MessageBox.error('Begin Date should equal or greater than today');
                                        return;
                                    }

                                    submitJson.Modified_UID = PDMS.Utility.Tools.GetLoginUserAccountID();

                                    $.post(OrganizationMaintenance.urls.AddOrg, { jsonAddOrg: JSON.stringify(submitJson) }, function (data) {
                                        if (data == 'SUCCESS') {
                                            PDMS.Utility.MessageBox.info("Add Organization Success");

                                            $("#js_form_org_edit input[type!=hidden]").val("");
                                        } else {
                                            PDMS.Utility.MessageBox.error(data);
                                        }
                                    });
                                } else {
                                    PDMS.Utility.MessageBox.error("Record with same organization id and name is exist!");
                                }
                            });
                }
            });

            //新增修改Org按钮
            $("#js_btn_save_edit_Org").click('click', function () {
                if ($('#js_form_org_edit').valid()) {

                    //check id & name if unique
                    $.get(
                        "CheckOrgExistByIdAndNameWithUId",
                        {
                            id: $.trim($('#js_input_Organization_ID').val()),
                            uid: +$('#Organization_UID_hidden').val(),
                            name: $.trim($('#js_input_Organization_Name').val())
                        },
                        function (isExist) {

                            if (!isExist) {

                                var submitJson = $('#js_form_org_edit').serializeObject();
                                var $inputEnddate = $('#js_input_end_date');
                                var enddateDisabled = $inputEnddate.prop('disabled');
                                var enddateValidate = true;

                                submitJson.End_Date = $inputEnddate.val();

                                if (!enddateDisabled && submitJson.End_Date.length > 0) {

                                    if (moment(submitJson.End_Date).diff(moment(), 'days') < 0) {
                                        PDMS.Utility.MessageBox.error('End Date should equal or greater than today');
                                        enddateValidate = false;
                                        return;
                                    }

                                    $.ajax({
                                        type: "get",
                                        url: OrganizationMaintenance.urls.GetMaxEnddate4Org,
                                        data: { orgUId: submitJson.Organization_UID },
                                        async: false,
                                        success: function (response) {

                                            if (response.Enddate != null && moment(submitJson.End_Date).isValid()) {
                                                if (moment(submitJson.End_Date).isBefore(response.Enddate)) {

                                                    enddateValidate = false;
                                                    PDMS.Utility.MessageBox.error("Org Bom has set End Date, End Date here should after " + response.Enddate);
                                                }
                                            }
                                        }
                                    });
                                }

                                if (enddateValidate) {

                                    submitJson.Modified_UID = PDMS.Utility.Tools.GetLoginUserAccountID();

                                    $.post(
                                        OrganizationMaintenance.urls.EditOrg,
                                        { jsonEditOrg: JSON.stringify(submitJson) },
                                        function (data) {
                                            if (data == 'SUCCESS') {
                                                PDMS.Utility.MessageBox.info("Edit Organization Success");
                                                OrganizationMaintenance.queryOrgs();
                                                $('#js_edit_modal').modal('hide');
                                            } else {
                                                PDMS.Utility.MessageBox.error(data);
                                            }
                                        });
                                }

                            } else {
                                PDMS.Utility.MessageBox.error("Record with same organization id and name is exist!");
                            }
                        });
                }
            });

            //edit button in grid
            $('body').on('click', '.js-grid-edit', function () {

                var $sender = $(this);
                if ($sender.hasClass('disabled')) {
                    PDMS.Utility.MessageBox.error("Organization already expired, can't edit!");
                    return;
                }

                var uuid = $sender.attr('data-id'),
                    url = OrganizationMaintenance.urls.queryOrg;

                $.post(url, { uuid: uuid }, function (data) {

                    $('#Organization_UID_hidden').val(uuid);

                    $('#js_input_Organization_ID').val(data.Organization_ID);
                    $('#js_input_Organization_Name').val(data.Organization_Name);
                    $('#js_input_Organization_Desc').val(data.Organization_Desc);

                    $('#js_input_OrgManager_Name').val(data.OrgManager_Name);
                    $('#js_input_OrgManager_Tel').val(data.OrgManager_Tel);
                    $('#js_input_OrgManager_Email').val(data.OrgManager_Email);

                    $('#js_input_Cost_Center').val(data.Cost_Center);
                    $('#js_input_begin_date').val(data.Begin_Date);
                    $('#js_input_end_date').val(data.End_Date).attr("disabled", data.End_Date !== null);

                });

                $('#js_edit_modal').modal('show', $(this));

            });

            //delete button in grid
            $('body').on('click', '.js-grid-delete', function () {

                var uid = $(this).data('id');

                PDMS.Utility.MessageBox.confirm(
                    "Are you sure to delete this item?"
                        , function () {
                            var url = OrganizationMaintenance.urls.deleteOrg;
                            $.post(url, { uid: uid}, function (data) {
                                if (data != 'FAIL') {
                                    OrganizationMaintenance.queryOrgs();
                                } else {
                                    PDMS.Utility.MessageBox.error("Organization already in use!");
                                }
                            });
                    //, function () {
