@section ViewScripts{
    <script type="text/javascript">
        $(function () {
            var BUMaintenance = (function () {
                var needBuildCriteria = false;
                var urls = {
                    queryBUs: '@Url.Action("QueryBUs", "Settings")',
                    QueryBU: '@Url.Action("QueryBU", "Settings")',
                    deleteBU: '@Url.Action("DeleteBU", "Settings")',
                    addBU: '@Url.Action("AddBUAPI", "Settings")',
                    exportBUs: '@Url.Action("DoExportBU", "Settings")'
                };

                var columns = [{
                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).html('<input type="checkbox" name="cktrans" class="js-checkbox-item" value="' + rowData.SystemBUMDTO.BU_M_UID + '">')
                             .addClass('table-col-checkbox');
                    },
                    className: "text-center"
                }, {
                    createdCell: function (td, cellData, rowData, row, col) {
                        var buttonEdit = '<button type="button" class="btn btn-primary btn-xs js-grid-edit" data-id="' + rowData.SystemBUMDTO.BU_M_UID + '">Edit</button>';
                        var result = '<button class="btn btn-primary btn-xs" rel="action-popover">' +
                                    '<i class="fa fa-reorder"></i>' +
                                    '</button>' +
                                    '<div class="hidden popover-content">' +
                                        '{0}' +
                                        '<button type="button" class="btn btn-primary btn-xs js-grid-delete" data-id="' + rowData.SystemBUMDTO.BU_M_UID + '">Delete</button>' +
                                    '</div>';

                        if (rowData.SystemBUMDTO.End_Date == null) {
                            result = result.replace('{0}', buttonEdit);
                        }
                        else {
                            var nowDate = moment().format("YYYY-MM-DD");
                            var systemTime = rowData.SystemBUMDTO.End_Date;
                            if (moment(nowDate).isBefore(systemTime) || moment(nowDate).isSame(systemTime)) { //如果系统日期大于当前日期则显示Edit按钮
                                result = result.replace('{0}', buttonEdit);
                            }
                            else {
                                result = result.replace('{0}', '<button type="button" class="btn btn-primary btn-xs js-grid-edit disabled" data-id="' + rowData.SystemBUMDTO.BU_M_UID + '">Edit</button>');
                            }
                        }
                        $(td).html(result);
                    },
                    className: "text-center"
                }, {
                    data: null,
                    className: "table-col-seq"
                }, {
                    data: "SystemBUMDTO.BU_ID",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUMDTO.BU_Name",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUMDTO.BUManager_Name",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUMDTO.BUManager_Tel",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUMDTO.BUManager_Email",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUMDTO.Begin_Date",
                    className: "min-col-xs"
                }, {
                    data: "SystemBUMDTO.End_Date",
                    className: "min-col-xs"
                }, {
                    data: "SystemUserDTO.User_Name",
                    className: "min-col-lg"
                }, {
                    data: "SystemBUMDTO.Modified_Date",
                    className: "min-col-lg"
                }];

                var _getParams = function () {

                    if (needBuildCriteria) {
                        return $('#js_form_query').serialize().replace(/\+/g, " ");
                    } else {
                        return null;
                    }
                };

                var _queryUsers = function (firstLoad, buildCriteria) {

                    var config = {
                        pageId: "#page",
                        tableId: "#js_user_datatable",
                        remoteUrl: urls.queryBUs,
                        searchParams: _getParams(),
                        tableOptions: {
                            columns: columns
                        }

                    };

                    if (!firstLoad) {
                        $('#page').page('destroy');
                    }
                    if (needBuildCriteria) {
                        PDMS.Utility.Criteria.Build();
                    }

                    PDMS.Utility.Pages.Set(config);
                };

                return {
                    urls: urls,
                    Init: function () {
                        PDMS.Utility.Criteria.Init();
                        _queryUsers(true);
                    },
                    QueryBUs: function (isSearchBtn) {

                        needBuildCriteria = (isSearchBtn === true ? true : needBuildCriteria);
                        _queryUsers(false);
                    }
                }
            })();

            BUMaintenance.Init();


            $('#js_form_user_edit').validate({
                errorContainer: $('ul.validate-error'),
                errorLabelContainer: $('#js_edit_modal ul.validate-error'),
                wrapper: 'li'
            });

            $('#js_input_end_date').rules('add', {
                StartDateGTEnd: "#js_input_begin_date",
                messages: { StartDateGTEnd: PDMS.Utility.Settings.ValidateMessage.twoDateError }
            });

            //为新增或修改Modal，注册事件
            $('#js_edit_modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);               

                //编辑状态
                if (button.hasClass('js-grid-edit')) {
                    $('#js_edit_modal').find(".modal-title").html('Edit BU Master');
                    $('#js_btn_save_new_bu ').hide();
                    $('#js_btn_save_edit_bu').show();
                    $('#js_edit_modal').find('input[name=isEdit]').val(true);
                    $('#js_input_begin_date').attr("disabled", true);
                }

                if (button.attr('id') == 'js_btn_add_bu') {
                    //新增状态
                    $('#js_edit_modal').find(".modal-title").html('Add BU Master');
                    $('#js_edit_modal').find('input[name=isEdit]').val(false);
                    $('#js_btn_save_new_bu').show();
                    $('#js_btn_save_edit_bu').hide();
                    $('#js_input_begin_date').removeAttr('disabled');;

                    $('#js_input_bu_id').data('original', '');
                }
            });
            //#endregion 新增或修改Div事件

            //隐藏modal框时清空值
            $('#js_edit_modal').on('hidden.bs.modal', function (e) {
                $('#js_edit_modal').find('input').val('');
                $('.list-group.validate-error').empty();
            });

            //edit button in grid
            $('body').on('click', '.js-grid-edit', function () {

                var $sender = $(this);
                if ($sender.hasClass('disabled')) {
                    PDMS.Utility.MessageBox.error("BU Master already expired, can't edit!");
                    return;
                }

                var BU_M_UID = $sender.data('id'),
                    url = BUMaintenance.urls.QueryBU;

                $.post(url, { BU_M_UID: BU_M_UID }, function (data) {
                    $('#js_input_bu_m_uid').val(data.BU_M_UID);
                    $('#js_input_bu_id').val(data.BU_ID).data('original',data.BU_ID);
                    $('#js_input_bu_name').val(data.BU_Name);
                    $('#js_input_bumanager_name').val(data.BUManager_Name);
                    $('#js_input_bumanager_tel').val(data.BUManager_Tel);
                    $('#js_input_bumanager_email').val(data.BUManager_Email);
                    $('#js_input_begin_date').val(data.Begin_Date);
                    $('#js_edit_modal').find('input[name=isEdit]').val(true);
                    $('#js_input_end_date').val(data.End_Date).attr("disabled", data.End_Date != null);
                });

                $('#js_edit_modal').modal('show', $(this));

            });

            //#region 删除事件
            $('body').on('click', '.js-grid-delete', function () {
                var BU_M_UID = $(this).attr('data-id');
                PDMS.Utility.MessageBox.confirm("Are you sure to delete this item?", function () {
                    var url = BUMaintenance.urls.deleteBU;
                    $.post(url, { BU_M_UID: BU_M_UID }, function (data) {
                        if (data != 'FAIL') {
                            BUMaintenance.QueryBUs();
                        } else {
                            PDMS.Utility.MessageBox.error("BU is already in use and can't be deleted!");
                        }
                    });
                });
            });
            //#endregion 删除事件

            //#region 导出事件

            $('#js_btn_export').click(function () {
                var $selectList = $('#js_user_datatable').find('.js-checkbox-item:checked');
                var len = $selectList.length;
                if (len == 0) {
                    PDMS.Utility.MessageBox.info('please select datas to export!');
                } else {
                    var uuids = $.map($selectList, function (row) {
                        return row.value;
                    });
                    var url = BUMaintenance.urls.exportBUs;
                    url += "?uuids=" + uuids.toString();
                    window.location.href = url;
                }
            });
            //#endregion 导出事件


            //#region 弹出搜索Div的所有方法

            //搜索方法
            $('#js_btn_query').click(function () {
                if ($("#js_form_query").valid()) {
                    BUMaintenance.QueryBUs(true);
                    $('#js_search_modal').modal('hide');
                }
            });

            //#region 搜索弹出框初始化
            $('#js_search_modal').on('show.bs.modal', function (event) {
                $('#js_s_input_ref_date').val(moment().format("YYYY-MM-DD"));
            });
            //#endregion


            $('#js_btn_clear').click(function () {

                PDMS.Utility.Criteria.Clear(function () {
                    $('#inlineRadio1').prop('checked', true);
                    $('#js_s_input_ref_date').val(moment().format("YYYY-MM-DD"));
                });
            });
            //#endregion 弹出搜索Div的所有方法

        })

    </script>

}
