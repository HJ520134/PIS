    ViewBag.kanbaninfo3 = T("FlowChart.kanbaninfo3").Text;
    ViewBag.kanbaninfo4 = T("FlowChart.kanbaninfo4").Text;
    ViewBag.kanbaninfo5 = T("FlowChart.kanbaninfo5").Text;
    ViewBag.kanbaninfo6 = T("FlowChart.kanbaninfo6").Text; 
