            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-clear" id="js_btn_clear">@T("Common.Clear")</button>
                <button id="btn_search" type="button" class="btn btn-primary btn-query">@T("Common.Search")</button>
