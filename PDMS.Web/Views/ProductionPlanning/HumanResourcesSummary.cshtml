                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>@T("QA.Functionfactory")</th>
                            <th>@T("Production.DayAttendance")</th>
                            <th>@T("Production.SevenRoundOne")</th>
                            <th>@T("Production.DayAttendance")</th>
                            <th>@T("Production.SevenRoundOne")</th>
                            <th>@T("Production.DayAttendance")</th>
                            <th>@T("Production.SevenRoundOne")</th>
                            <th>@T("Production.DayAttendance")</th>
                            <th>@T("Production.SevenRoundOne")</th>
                            <th>@T("Production.ManPowOther")</th>
                            <th>Total DL @T("Production.DayAttendance")</th>
                            <th>Total DL @T("Production.SevenRoundOne")</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@T("QA.Functionfactory")</th>
                            <th>@T("Production.DayAttendance")</th>
                            <th>@T("Production.SevenRoundOne")</th>
                            <th>@T("Production.DayAttendance")</th>
                            <th>@T("Production.SevenRoundOne")</th>
                            <th>@T("Production.DayAttendance")</th>
                            <th>@T("Production.SevenRoundOne")</th>
                            <th>@T("Production.DayAttendance")</th>
                            <th>@T("Production.SevenRoundOne")</th>
                            <th>@T("Production.ManPowOther")</th>
                            <th>Total DL @T("Production.DayAttendance")</th>
                            <th>Total DL @T("Production.SevenRoundOne")</th>
                        </tr>
                    </tfoot>
                </table>
                <div id="page" class="row"></div>
            </div><!--/表格-->
        </div><!-- / 內容 表格列 -->
    }

</section><!-- /.content -->

@section ViewModals{
    <div class="modal fade" id="js_search_modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">@T("Common.Set")</h4>
                </div>
                <div class="modal-body form-horizontal">
                    <div class="row">
                        <form id="js_form_query" data-need-validate="true">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label" data-type="select" for="js_s_select_org_ctu">@T("QA.Plantarea")</label>
                                    <div class="col-sm-7">
                                        <select class="form-control input-sm se1" id="js_s_select_org_ctu" name="Plant" placeholder="@T("QA.Plantarea")"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label" data-type="select" for="js_s_select_org_pp">Business Group</label>
                                    <div class="col-sm-7">
                                        <select class="form-control input-sm se2" id="js_s_select_org_pp" name="BG_Organization_UID" placeholder="Business Group"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label" for="js_s_select_Project">@T("QA.Project")</label>
                                    <div class="col-sm-7">
                                        <select class="form-control input-sm se3" id="js_s_select_Project" name="Project_UID" placeholder="@T("QA.Project")"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label class="col-sm-5 control-label" for="js_s_input_InputPcs">@T("Production.SetInput")</label>
                                    <div class="col-sm-7">
                                        <select class="form-control input-sm" id="js_s_input_InputPcs" name="InputPcs" placeholder="@T("Production.SetInput")"></select>
                                        @*<input type="text" name="InputPcs" class="form-control input-sm" id="js_s_input_InputPcs" placeholder="@T("Production.SetInput")">*@
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-clear"  data-dismiss="modal" id="js_btn_clear">@T("Common.Cancel")</button>
                    <button id="btn_search" type="button" class="btn btn-primary btn-query">@T("QA.Inquire")</button>
                </div>
            </div>
        </div>
    </div>
}

@section ViewScripts{
    <script type="text/javascript">
        $(function () {
            var FlowChartsForIE = (function () {
                var proAndOrg = null;
                var urls = {
                    QueryFlowCharts: '@Url.Action("ShowHumanResourcesSummary", "ProductionPlanning")',
                    GetInputDataForSelect: '@Url.Action("GetInputDataForSelect", "ProductionPlanning")',
                    JudgeFlowchart: '@Url.Action("JudgeFlowchart", "ProductionPlanning")',
                    ViewFlowchart: '@Url.Action("ViewFlowchart", "ProductionPlanning")',
                    QuerySummaryReport: '@Url.Action("QuerySummaryReport", "ProductionPlanning")',
                    FlowchartListIEMatching: '@Url.Action("FlowchartListIEMatching", "ProductionPlanning")',
                    getOrgAndPro: '@Url.Action("getOrgAndPro", "Settings")',
                    getUserPlant: '@Url.Action("getUserPlant", "Settings")',
                    getProject: '@Url.Action("getProject", "Settings")',
                    DownloadIEMatching: '@Url.Action("DownloadHumanResourcesSummary", "ProductionPlanning")'
                };


                var columns = [
                //{
                //    createdCell: function (td, cellData, rowData, row, col) {
                //        //查看人力配比明细
                //        var htmlView = '<button type="button" class="btn btn-default btn-sm js-grid-view" data-id="' + rowData.FlowChart_Master_UID + '" data-project="' + rowData.Project_Name + '">查看人力配比明细</button></br>';
                //        //审核
                //        var htmlJudge = '<button type="button" class="btn btn-default btn-sm js-grid-judge" data-id="' + rowData.FlowChart_Master_UID + '" data-project="' + rowData.Project_Name +'">审核</button> </br>';
                //        //查看人力配比汇总表
                //        var htmlReport = '<button type="button" class="btn btn-default btn-sm js-grid-report" data-id="' + rowData.FlowChart_Master_UID + '" data-project="' + rowData.Project_Name + '">关闭</button></br>';
                //        //下载人力配比明细模板
                //        var htmldownload = '<button type="button" class="btn btn-default btn-sm js-grid-download" data-id="' + rowData.FlowChart_Master_UID + '" data-project="' + rowData.Project_Name + '">人力配比明细模板下载</button></br>';
                //        //上传人力配比明细
                //        var htmlupload = '<button type="button" class="btn btn-default btn-sm js-grid-upload" data-id="' + rowData.FlowChart_Master_UID + '" data-project="' + rowData.Project_Name + '">上传人力配比明细</button></br>';

                //        var result = '<button type="button" class="btn btn-default btn-xs" rel="action-popover">' +
                //                     '<i class="fa fa-reorder text-info"></i>' +
                //                     '</button>' +
                //                     '<div class="hidden popover-content">';

                //        result = result + htmlView + htmlJudge + htmlReport + htmldownload + htmlupload;
                //        $(td).html(result);
                //    },
                //    className: "text-center"
                //},
                {
                    data: "FunPlant",
                    className: "min-col-xs"
                }, {
                    data: "SquadLeaderNow",
                    className: "min-col-xs"
                }, {
                    data: "SquadLeaderRound",
                    className: "min-col-xs"
                }, {
                    data: "TechnicianNow",
                    className: "min-col-xs"
                }, {
                    data: "TechnicianRound",
                    className: "min-col-xs"
                }, {
                    data: "MaterialKeeperNow",
                    className: "min-col-xs"
                }, {
                    data: "MaterialKeeperRound",
                    className: "min-col-xs"
                }, {
                    data: "OPNow",
                    className: "min-col-xs"
                }, {
                    data: "OPRound",
                    className: "min-col-xs"
                }, {
                    data: "OtherNow",
                    className: "min-col-xs"
                }, {
                    data: "TotalNow",
                    className: "min-col-xs"
                }, {
                    data: "TotalRound",
                    className: "min-col-xs"
                }];





            var _getParams = function () {
                return $('#js_form_query').serialize().replace(/\+/g, " ");
            };

            var _queryFLS = function (firstLoad) {
                var config = {
                    pageId: "#page",
                    tableId: "#js_user_datatable",
                    remoteUrl: urls.QueryFlowCharts,
                    searchParams: _getParams(),
                    tableOptions: {
                        scrollX: true,
                        autoWidth: true,
                        columns: columns
                    }
                };

                if (!firstLoad) {
                    $('#page').page('destroy');
                    PDMS.Utility.Criteria.Build();
                }
                PDMS.Utility.Pages.Set(config);
            };

            return {
                urls: urls,
                Init: function () {
                    PDMS.Utility.Criteria.Init();
                    //_queryFLS(true);
                    initSelect();
                },
                QueryFLCharts: function () {
                    _queryFLS(false);
                }
            }

            })();
            FlowChartsForIE.Init();

            function initSelect() {
                var url = FlowChartsForIE.urls.getOrgAndPro;
                $.post(url, function (data) {
                    if (data != null) {
                        proAndOrg = data;
                        getplant();
                    }
                });
            }

            function getplant() {
                var url = FlowChartsForIE.urls.getUserPlant;
                $.post(url, function (data) {
                    if (data != null) {
                        $("#js_s_select_org_ctu").empty();
                        //添加空的选择框
                        $("<option></option>")
                            .val("")
                            .text("")
                            .appendTo($("#js_s_select_org_ctu"));
                        //添加从数据库中查询的Project
                        $.each(data, function (i, item) {
                            var op = "@ViewBag.OP";
                            if (item == op && op != 0) {
                                $("<option></option>").val(item).text(item).appendTo($("#js_s_select_org_ctu"));
                            } else {
                                $("<option></option>").val(item).text(item).appendTo($("#js_s_select_org_ctu"));
                            }
                        });
                    }
                });
            }

            function getOpTypes(temp) {
                $(".se2").empty();
                //if (temp != "WUXI_M") {
                $("<option></option>").val("").text("").appendTo($("#js_edit_select_Org_PP"));
                $("<option></option>").val("").text("").appendTo($("#js_s_select_org_pp"));
                //}
                //$("<option></option>").val("Nothing").text("").appendTo($("#js_e_select_org_op"));
                //添加从数据库中查询的Project
                $.each(proAndOrg.SystemOrg, function (i, item) {
                    if (item.Father_Org == temp) {
                        $("<option></option>").val(item.Organization_UID).text(item.Child_Org).appendTo($("#js_edit_select_Org_PP"));
                        $("<option></option>").val(item.Organization_UID).text(item.Child_Org).appendTo($("#js_s_select_org_pp"));
                    }
                });
                $("#js_edit_select_Org_PP").trigger('change');
            };

            function getProject(pp) {
                var id = pp;
                var url = FlowChartsForIE.urls.getProject;
                $.post(url, { org: id }, function (data) {
                    $("#js_s_select_Project").empty();
                    $("<option></option>").val("").text("").appendTo($("#js_s_select_Project"));
                    //添加节点
                    $.each(data, function (i, item) {

                        $("<option></option>")
                            .val(item.Project_UID)
                            .text(item.Project_Name)
                            .appendTo($("#js_s_select_Project"));
                    });
                });
            };

            $('.se1').on('change', function () {
                var f1 = $('#js_s_select_org_ctu').val();
                var f2 = $('#js_edit_select_Org_CTU').val();
                if (f1 != "") {
                    getOpTypes(f1);
                }
                else {
                    getOpTypes(f2);
                }
            });

            $('.se2').on('change', function () {
                var f1 = $('#js_s_select_org_pp').val();
                if (f1 != "" && f1 != null && f1 != "") {
                    getProject(f1);
                }
            });

            $('.se3').on('change', function () {
                var f1 = $('#js_s_select_Project').val();
                if (f1 != "" && f1 != null && f1 != "") {
                    var id = f1;
                    var url = FlowChartsForIE.urls.GetInputDataForSelect;
                    $.post(url, { project: id }, function (data) {
                        $("#js_s_input_InputPcs").empty();
                        $("<option></option>").val("").text("").appendTo($("#js_s_input_InputPcs"));
                        //添加节点
                        $.each(data, function (i, item) {

                            $("<option></option>")
                                .val(item.FlowChart_Version)
                                .text(item.Capacity_ByDay)
                                .appendTo($("#js_s_input_InputPcs"));
                        });
                    });
                }
            });

            $('body').on('click', '.js-grid-view', function () {
                var FlowChart_Master_UID = $(this).attr('data-id');
                var ProjectName = $(this).attr('data-project');


                var url = FlowChartsForIE.urls.FlowchartListIEMatching;
                url += "?FlowChart_Master_UID=" + FlowChart_Master_UID + "&&ProjectName=" + ProjectName;
                window.location.href = url;

            });
            $('body').on('click', '#btn_search', function () {
                if ($("#js_form_query").valid()) {
                    FlowChartsForIE.QueryFLCharts(true);
                    $('#js_search_modal').modal('hide');
                }
                
                //var $modal = $('#js_search_modal');
                //$modal.modal('hide');
            });

            $('body').on('click', '.js-grid-report', function () {
                var FlowchartMaster_UID = $(this).attr('data-id');
                var projectName = $(this).attr('data-project');


            });

            $('body').on('click', '#js_btn_search', function () {
                $.blockUI({ message: "<h1>@ViewBag.Imported</h1>" });
                setTimeout($.unblockUI, 6000);
                //var FlowChart_Master_UID = $(this).attr('data-id');
                //var Project_Name = $(this).attr('data-project');
                $('#js_form_datatable_exec').attr('action', '../ProductionPlanning/DownloadHumanResourcesSummary');
                $('#js_form_datatable_exec').submit();
            });

            $('body').on('click', '.js-grid-upload', function () {
                var FlowchartMaster_UID = $(this).attr('data-id');
                var projectName = $(this).attr('data-project');
                //var FlowChart_Master_UID = $(this).attr('data-id');
                $('#hid_key').val(FlowChart_Master_UID);
                //$.get(FLMaintenance.urls.queryFL, { FlowChart_Master_UID: FlowChart_Master_UID }, function (data) {
                //    var customer = data.BU_D_Name;
                //    var projectName = data.SystemProjectDTO.Project_Name;
                //    var partTypes = data.FlowChartMasterDTO.Part_Types;
                //    var phase = data.SystemProjectDTO.Product_Phase;
                $('#js_editExcel_modal').find('.modal-title').text("@ViewBag.UploadExcel" + projectName + " @ViewBag.MaintenanceIEDetail");
                $('#js_editExcel_modal').modal('show');
                });


            //#region 更新Excel提交按钮
            $('#js_btn_excel_update').on('click', function () {
                $('#js_editExcel_modal').modal('hide');
                $.blockUI({ message: "<h1>@ViewBag.Imported</h1>" });
                $('#js_form_excel_update').ajaxSubmit({
                    beforeSubmit: function () {
                        if (!$('#js_form_excel_update').valid()) {
                            $.unblockUI();
                            return false;
                        }
                    },
                    success: function (data) {
                        $.unblockUI();
                        if (data != '') {
                            PDMS.Utility.MessageBox.info(data);
                        }
                        else {
                            PDMS.Utility.MessageBox.info('@ViewBag.Updatecompleted');
                            window.location.reload();
                        }
                    }
                });
            });
            //#endregion

            });



    </script>
}