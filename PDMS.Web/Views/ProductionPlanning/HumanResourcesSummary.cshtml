    <div class="row">
        <div class="col-xs-12" id="js_criteria_alert_cnt">
        </div>
    </div>
    <!--內容 表格列-->
    @using (Html.BeginForm("DataTableExec", "FlowChart", FormMethod.Post, new { id = "js_form_datatable_exec" }))
    {
        <div class="row">
