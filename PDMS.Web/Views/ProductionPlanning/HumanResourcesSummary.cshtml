@{
    ViewBag.Imported = T("QA.Imported").Text;
    ViewBag.UploadExcel = T("Common.UploadExcel").Text;
    ViewBag.MaintenanceIEDetail = T("Production.MaintenanceIEDetail").Text;
    ViewBag.Updatecompleted = T("QA.Updatecompleted").Text;

 }
<section class="content-header portal-content-header">
    <h1>
        @T("FlowChart.renlihuizong")
        <small></small>
    </h1>
</section>
<!-- Main content -->
<section class="content portal-content">
    <!--次標題 與 搜尋-->
    <div class="row">
        <!--次標題與Search keyword-->
        <div class="col-md-12 col-lg-9">
            <h4 class="margin-td-5" id="js_search_keywords"></h4>
        </div><!-- /col-次標題與Search keyword -->
        <!--col-右方搜尋與功能按鈕列-->
        <div class="col-md-12 search-field col-lg-3">
            <a class="btn btn-primary btn-sm" data-toggle="modal" id="js_btn_search"><i class="glyphicon glyphicon-save"></i> @T("Common.Export")</a>
            <a class="btn btn-primary btn-sm" role="button" data-toggle="modal" data-target="#js_search_modal" id="js_btn_add_org">
