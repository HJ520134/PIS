@section ViewScripts{
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap-select.css" />
    <script type="text/javascript" src="~/Scripts/EQP/bootstrap-select.js"></script>
    <script type="text/javascript">

        $(function () {

            var CostCenterMaintenanceUrls = {
                queryCostCenters: '@Url.Action("QueryCostCenters", "Equipmentmaintenance")',
                queryCostCenter: '@Url.Action("QueryCostCenter", "Equipmentmaintenance")',
                deleteCostCenter: '@Url.Action("DeleteCostCenter", "Equipmentmaintenance")',
                addCostCenter: '@Url.Action("AddCostCenter", "Equipmentmaintenance")',
                modifyCostCenter: '@Url.Action("ModifyCostCenter", "Equipmentmaintenance")',
                getPlants: '@Url.Action("GetPlantsUseSettingsAPI", "Equipmentmaintenance")',
                getOPType: '@Url.Action("GetOPTypeUseFixtureAPI", "Equipmentmaintenance")',
                getFunPlant: '@Url.Action("GetFunPlantUseFixtureAPI", "Equipmentmaintenance")',
            };

            //#region CostCenterMaintenance
            var CostCenterMaintenance = (function () {

                //#region columns
                var columns = [
                    {
                        data: null,
                        className: "table-col-seq"
                    }, {
                        createdCell: function (td, cellData, rowData, row, col) {
                            $(td).html('<button class="btn btn-primary btn-xs" rel="action-popover">' +
                                '<i class="fa fa-reorder"></i>' +
                                '</button>' +
                                '<div class="hidden popover-content">' +
                                '<button type="button" class="btn btn-primary btn-xs js-grid-edit" data-id="' + rowData.CostCtr_UID + '">Edit</button>' +
                                '<button type="button" class="btn btn-primary btn-xs js-grid-delete" data-id="' + rowData.CostCtr_UID + '">Delete</button>' +
                                '</div>');
                        },
                        className: "text-center min-col-xs"
                    }, {
                        data: "factory",
                        className: "min-col-xs"
                    }, {
                        data: "op_Type",
                        className: "min-col-xs"
                    }, {
                        data: "funPlant",
                        className: "min-col-xs"
                    }, {
                        data: "CostCtr_ID",
                        className: "min-col-lg"
                    }, {
                        data: "CostCtr_Description",
                        className: "min-col-lg"
                    }, {
                        data: "Modified_UserName",
                        className: "min-col-lg"
                    }, {
                        data: "Modified_Date",
                        className: "min-col-lg"
                    }];
                //#endregion

                var _getParams = function () {
                    return $('#js_form_query').serialize().replace(/\+/g, " ");
                };

                var _queryCostCenters = function (firstLoad) {

                    var config = {
                        pageId: "#page",
                        tableId: "#js_cost_center_datatable",
                        remoteUrl: CostCenterMaintenanceUrls.queryCostCenters,
                        searchParams: _getParams(),
                        tableOptions: {
                            scrollX: true,
                            scrollCollapse: false,
                            autoWidth: true,
                            columns: columns
                        }
                    };

                    if (!firstLoad) {
                        $('#page').page('destroy');
                        PDMS.Utility.Criteria.Build();
                    }

                    PDMS.Utility.Pages.Set(config);
                };

                return {
                    Init: function () {

                        PDMS.Utility.Criteria.Init();
                        _queryCostCenters(true);
                    },
                    QueryCostCenters: function () {
                        _queryCostCenters(false);
                    }
                }

            })();
            //#endregion

            CostCenterMaintenance.Init();

            //#region Page elements events

            //$('#js_s_select_factory,#js_s_select_op_type,#js_s_select_fun_plant,#js_select_factory,#js_select_op_type,#js_select_fun_plant').selectpicker({ 'selectedText': 'cat' });

            //廠區資料載入
            url = CostCenterMaintenanceUrls.getPlants;
            $.post(url, function (data) {
                $('#js_s_select_factory').html('<option></option>');
                $('#js_select_factory').html('<option></option>');
                for (var i = 0; i < data.length; i++) {
                    //查詢頁
                    if ($('#js_s_select_factory').find('option[value=' + data[i].Organization_UID + ']').length == 0) {
                        $('#js_s_select_factory').append('<option value="' + data[i].Organization_UID + '">' + data[i].Organization_Name + '</option>');
                    }
                    //編輯頁
                    if ($('#js_select_factory').find('option[value=' + data[i].Organization_UID + ']').length == 0) {
                        $('#js_select_factory').append('<option value="' + data[i].Organization_UID + '">' + data[i].Organization_Name + '</option>');
                    }
                }
                $('#js_s_select_factory').selectpicker('val', '');
                $('#js_select_factory').selectpicker('val', '');
                //$('#js_s_select_factory').selectpicker('refresh');
                //$('#js_select_factory').selectpicker('refresh');
            });
            //查詢頁廠區變更
            $('#js_s_select_factory').change(function () {
                var oporgid = $('#js_s_select_factory option:selected').val();
                url = CostCenterMaintenanceUrls.getOPType;
                $('#js_s_select_op_type').html('<option></option>');
                $('#js_s_select_op_type').selectpicker('refresh');

                $('#js_s_select_fun_plant').html('<option></option>');
                $('#js_s_select_fun_plant').selectpicker('refresh');
                if (oporgid != 0) {
                    $.post(url, { plant_OrganizationUID: oporgid }, function (data) {

                        for (var i = 0; i < data.length; i++) {
                            if ($('#js_s_select_op_type').find('option[value=' + data[i].Organization_UID + ']').length == 0) {
                                $('#js_s_select_op_type').append('<option value="' + data[i].Organization_UID + '">' + data[i].OP_TYPES + '</option>');
                            }
                        }
                        $('#js_s_select_op_type').selectpicker('refresh');
                    });
                }
            })
            //查詢頁op類型變更
            $('#js_s_select_op_type').change(function () {
                $('#js_s_select_fun_plant').html('<option></option>');
                if ($('#js_s_select_op_type').val() != "") {
                    var url = CostCenterMaintenanceUrls.getFunPlant;
                    $.post(url, { oporgid: $('#js_s_select_op_type').val(), Optypes: $('#js_s_select_op_type option:selected').text() }, function (data) {
                        for (var i = 0; i < data.length; i++) {
                            debugger;
                            if ($('#js_s_select_fun_plant').find('option[value=' + data[i].FunPlant_OrganizationUID + ']').length == 0) {
                                $('#js_s_select_fun_plant').append('<option value="' + data[i].FunPlant_OrganizationUID + '">' + data[i].FunPlant + '</option>');
                            }
                        }
                        $('#js_s_select_fun_plant').selectpicker('refresh');
                    })
                }
            })

            //編輯頁廠區變更
            $('#js_select_factory').change(function () {
                var oporgid = $('#js_select_factory option:selected').val();
                url = CostCenterMaintenanceUrls.getOPType;
                $('#js_select_op_type').html('<option></option>');
                $('#js_select_op_type').selectpicker('refresh');

                $('#js_select_fun_plant').html('<option></option>');
                $('#js_select_fun_plant').selectpicker('refresh');
                if (oporgid != 0) {
                    $.post(url, { plant_OrganizationUID: oporgid }, function (data) {

                        for (var i = 0; i < data.length; i++) {
                            if ($('#js_select_op_type').find('option[value=' + data[i].Organization_UID + ']').length == 0) {
                                $('#js_select_op_type').append('<option value="' + data[i].Organization_UID + '">' + data[i].OP_TYPES + '</option>');
                            }
                        }
                        $('#js_select_op_type').selectpicker('refresh');
                    });
                }
            })
            //編輯頁op類型變更
            $('#js_select_op_type').change(function () {
                $('#js_select_fun_plant').html('<option></option>');
                if ($('#js_select_op_type').val() != "") {
                    var url = CostCenterMaintenanceUrls.getFunPlant;
                    $.post(url, { oporgid: $('#js_select_op_type').val(), Optypes: $('#js_select_op_type option:selected').text() }, function (data) {
                        for (var i = 0; i < data.length; i++) {
                            debugger;
                            if ($('#js_select_fun_plant').find('option[value=' + data[i].FunPlant_OrganizationUID + ']').length == 0) {
                                $('#js_select_fun_plant').append('<option value="' + data[i].FunPlant_OrganizationUID + '">' + data[i].FunPlant + '</option>');
                            }
                        }
                        $('#js_select_fun_plant').selectpicker('refresh');
                    })
                }
            })

            //查询按钮
            $('#js_btn_query').click(function () {

                if ($('#js_form_query').valid()) {

                    CostCenterMaintenance.QueryCostCenters();
                    $('#js_search_modal').modal('hide');
                }
            });

            //新增儲存CostCenter按钮
            $('#js_btn_save_new').click('click', function () {

                if ($.trim($('#js_select_factory').val()) === ''
                    || $.trim($('#js_select_op_type').val()) === ''
                    || $.trim($('#js_input_cost_center_id').val()) === ''
                    || $.trim($('#js_input_cost_center_desc').val()) === '') {
                    PDMS.Utility.MessageBox.info("Please be sure to enter Factory,OP Type,Cost Center ID and Cost Center Description");

                } else {

                    if ($("#js_form_maintain").valid()) {
                        var submitJson = $('#js_form_maintain').serializeObject();

                        $.post(CostCenterMaintenanceUrls.addCostCenter, { jsonCostCenter: JSON.stringify(submitJson) }, function (data) {
                            if (data == 'SUCCESS') {
                                PDMS.Utility.MessageBox.info("Save Success");
                                $("#js_form_maintain input[type!='hidden']").val('');
                            } else {
                                PDMS.Utility.MessageBox.error(data);
                            }
                        });
                    }
                }
            });

            //修改儲存CostCenter按钮
            $('#js_btn_save_edit').click('click', function () {

                if ($.trim($('#js_input_cost_center_desc').val()) === '') {
                    PDMS.Utility.MessageBox.info("Please be sure to enter Cost Center Description");

                } else {

                    if ($("#js_form_maintain").valid()) {
                        var submitJson = $('#js_form_maintain').serializeObject();

                        $.post(CostCenterMaintenanceUrls.modifyCostCenter, { jsonCostCenter: JSON.stringify(submitJson) }, function (data) {
                            if (data == 'SUCCESS') {
                                PDMS.Utility.MessageBox.info("Save Success");
                                CostCenterMaintenance.QueryCostCenters(false);
                                $('#js_edit_modal').modal('hide');
                            } else {
                                PDMS.Utility.MessageBox.error(data);
                            }
                        });
                    }
                }

            });

            //Form Validate
            $('#js_form_maintain').validate({
                errorContainer: $('ul.validate-error'),
                errorLabelContainer: $('#js_edit_modal ul.validate-error'),
                wrapper: 'li'
            });

            //clear query conditions按钮
            $('#js_search_modal').on('click', '.btn-clear', function () {
                $(this).closest('.modal-content').find('input').val('');
            });

            //#region Add/Edit model 出现和消失事件
            $('#js_edit_modal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget)
                var modal = $(this)
                var title = modal.find('.modal-title');

                if (button.attr('id') == 'js_btn_add') {

                    title.text("Add CostCenter");

                    $('#js_btn_save_edit').hide();
                    $('#js_btn_save_new').show();
                    $('#js_hidden_costctr_uid').val(0);
                }
                else {
                    title.text("Edit CostCenter");

                    $('#js_btn_save_edit').show();
                    $('#js_btn_save_new').hide();
                }
            })

            $('#js_edit_modal').on('hidden.bs.modal', function (e) {
                $('#js_select_factory').selectpicker('val', '');
                //$('#js_select_factory').selectpicker('refresh');
                $('#js_select_factory').removeAttr("disabled");
                $('#js_select_op_type').html('<option></option>');
                $('#js_select_op_type').selectpicker('refresh');
                $('#js_select_op_type').removeAttr("disabled");
                $('#js_select_fun_plant').html('<option></option>');
                $('#js_select_fun_plant').selectpicker('refresh');
                $('#js_edit_modal').find('input').val('');
                $('#js_input_cost_center_id').removeAttr("readonly");
                $('.list-group.validate-error').empty();
            });
            //#endregion

            //Grid中编辑按钮
            $('body').on('click', '.js-grid-edit', function () {

                var uid = $(this).data('id'),
                    url = CostCenterMaintenanceUrls.queryCostCenter;

                $.post(url, { uid: uid }, function (data) {
                    //$('#js_select_factory').val(data.Plant_Organization_UID);
                    $('#js_select_factory').selectpicker('refresh')
                    $('#js_select_factory').selectpicker('val', data.Plant_Organization_UID);
                    $('#js_select_factory').trigger('change');
                    $('#js_select_factory').attr('disabled', true);
                    $('#js_select_op_type').append('<option value="' + data.BG_Organization_UID + '">' + data.op_Type + '</option>');
                    $('#js_select_op_type').selectpicker('refresh')
                    $('#js_select_op_type').selectpicker('val', data.BG_Organization_UID);
                    $("#js_select_op_type").trigger("change");
                    $('#js_select_op_type').attr('disabled', true);
                    if (data.FunPlant_Organization_UID != null) {
                        $('#js_select_fun_plant').append('<option value="' + data.FunPlant_Organization_UID + '">' + data.funPlant + '</option>');
                        $('#js_select_fun_plant').selectpicker('refresh')
                        $('#js_select_fun_plant').selectpicker('val', data.FunPlant_Organization_UID);
                    }
                    $('#js_input_cost_center_id').val(data.CostCtr_ID);
                    $('#js_input_cost_center_id').attr('readonly', true);
